<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:cData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
		controllerName="airbus.mes.shell.globalNavigation" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="MES" enableScrolling="false">
		<customHeader>
			<Toolbar class="pageHeader">
                           <content>	

                           <Image src="../images/Airbus.png" width="10rem" height="2rem" press="goToHome" />
                           <ToolbarSeparator />
                           <Label text="MES" class="pageTitle"/>
                           <ToolbarSpacer />
                           
                            <Label text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/station', formatter : 'airbus.mes.shell.util.Formatter.stationTrackerStation' }" class="pageTitle sapUiTinyMarginBeginEnd" />
							<Label text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/msn', formatter : 'airbus.mes.shell.util.Formatter.stationTrackerMsn' }" class="pageWelcome sapUiTinyMarginBeginEnd" /> 
							<Label text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/plant', formatter : 'airbus.mes.shell.util.Formatter.stationTrackerPlant' }" class="pageWelcome sapUiTinyMarginBeginEnd" />
							<Label text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/line', formatter : 'airbus.mes.shell.util.Formatter.stationTrackerLine' }" class="pageWelcome sapUiTinyMarginBeginEnd" />					
					       <ToolbarSpacer />
                           
                           
                           <core:Icon src="sap-icon://customer"/>
                           <Label text="{ShellI18n>Welcome}" class="pageWelcome"/>
                           <Label id="user_id" text="{userDetailModel>/Rowsets/Rowset/0/Row/0/first_name}" design="Bold" class="pageUsername"/>
                           <ToolbarSeparator />
                           <Button text="{ShellI18n>Logout}" type="Transparent" icon="sap-icon://log" class="whiteColor whiteButton"></Button>
                           <ToolbarSeparator />
                           <Select id="SelectLanguage" class="sapUiTinyMarginBeginEnd pageHeader pageHeaderBlue" change="onChangeLanguage"> 
	                           <core:Item text="English" />
	                           <core:Item text="Deutsch" />
	                           <core:Item text="French" />
	                           <core:Item text="Spanish" />                                                      
                           </Select>
                           <ToolbarSeparator />
                           <Button id="informationButton" icon="sap-icon://message-information" type="Transparent" press="onInformation" visible="false"  class="whiteColor whiteButton" />
                           <Button id="settingsButton" 
                                   type="Transparent" 
                                   icon="sap-icon://action-settings" 
                                   class="whiteColor whiteButton" 
                                   press="navigate"
                                   enabled="{ path : './', formatter : 'airbus.mes.shell.util.Formatter.checkCurrentView' }"
                            ></Button> 
                           </content>
                    </Toolbar>
		</customHeader>

		<content width="100%" height="100%">
	
				<NavContainer id="navCont" height="100%" afterNavigate="renderStationTracker"></NavContainer>							
				
		</content>
	</Page>
</core:View>
