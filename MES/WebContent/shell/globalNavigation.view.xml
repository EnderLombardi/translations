					       	<ToolbarSpacer />	                   
							<Button id="refreshTime"  icon="sap-icon://refresh" press="refreshbtn" text="Last Refresh : 0s" visible="false" enabled="false" type="Transparent"></Button> 
							<Button id="localDELog" press="logOut" text="Remove Cookie" type="Transparent"></Button>                         
                         	 <Select id="SelectLanguage" class="sapUiTinyMarginBeginEnd pageHeader pageHeaderBlue" change="onChangeLanguage"> 
	                           		<core:Item text="English" key="en"/>
	                           		<core:Item text="Deutsch" key="de"/>
	                           		<core:Item text="FranÃ§ais" key="fr"/>
	                        	   <core:Item text="Spanish" key="sp"/>                                                      
                           	</Select>
                           	<Button id="informationButton" icon="sap-icon://message-information" type="Transparent" press="onInformation" visible="false"  class="whiteColor whiteButton" />
