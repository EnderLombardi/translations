                          	<!--  <Button id="myProfile" icon="sap-icon://account" type="Transparent" press="goToMyProfile" visible="true"/> -->
                            <Button id="settingsButton"
                                   type="Transparent" 
                                   icon="sap-icon://action-settings" 
