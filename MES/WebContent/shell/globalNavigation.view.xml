                           <ToolbarSpacer />
       							<Label text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/stationDescription', formatter : 'airbus.mes.shell.util.Formatter.stationTrackerStation' }" class="pageTitle titleStation sapUiTinyMarginBeginEnd" />
								<Label id="labelMSN" text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/msn', formatter : 'airbus.mes.shell.util.Formatter.stationTrackerMsn' }" class="pageWelcome sapUiTinyMarginBeginEnd" /> 
