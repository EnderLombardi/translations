<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover showHeader="false" placement="Left" showArrow="false" class="informationColor rightPlace" afterClose="onCloseInformation">
		<VBox>
			<items>
				<Label text="{ShellI18n>Legend}" class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" design="Bold"/>
				<HBox  alignItems="Center"  class="sapUiTinyMarginTopBottom">
					<FlexBox width="2rem" height="2rem" class="completedColor sapUiTinyMarginBeginEnd" />
					<Label text="{ShellI18n>OperationCertified}" />
				</HBox>
				<HBox alignItems="Center" class="sapUiTinyMarginTopBottom">
					<FlexBox width="2rem" height="2rem" class="activeColor sapUiTinyMarginBeginEnd" />
					<Label text="{ShellI18n>OperationInProgress}"/>
				</HBox>
				<HBox alignItems="Center" class="sapUiTinyMarginTopBottom">
					<FlexBox width="2rem" height="2rem" class="andonColor sapUiTinyMarginBeginEnd" />
					<Label text="{ShellI18n>OperationAndon}"/>
				</HBox>
				<HBox alignItems="Center" class="sapUiTinyMarginTopBottom">
					<FlexBox width="2rem" height="2rem" class="blockedColor sapUiTinyMarginBeginEnd" />
					<Label text="{ShellI18n>OperationBlocked}"/>
				</HBox>
				<HBox alignItems="Center" class="sapUiTinyMarginTopBottom">
					<FlexBox width="2rem" height="2rem" class="notStatedColor sapUiTinyMarginBeginEnd" />
					<Label text="{ShellI18n>OperationNotStarted}"/>
				</HBox>																
			</items>
		</VBox>
	</Popover>
</core:FragmentDefinition>