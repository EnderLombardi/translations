<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover id="operationPopoverID" 		contentWidth="320px" 		contentHeight="500px" placement="Bottom">
		<NavContainer id="navOperatorContainer">
			<Page id="master">
			<List>
				<CustomListItem>
					<VBox id="SPGeneral" class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop">
						<HBox>
							<Label id="SPGeneralOP" text="OP 2000 Work order 100331826222"
								design="Bold" class="spTitle" />
						</HBox>
						<HBox class="sapUiSmallMarginTop">
							<Label id="SPGeneralDesc" text="924er Halter und C-Brackets Incl. Massen"
								class="spTitle" />
						</HBox>
						<HBox class="sapUiSmallMarginTop">
							<HBox width="50%">
								<Label text="Start: " design="Bold" />
								<Label id="SPStart" text="10:00" class="sapUiTinyMarginBeginEnd" />
								<Label text="End: " design="Bold" />
								<Label id="SPEnd" text="10:00" class="sapUiTinyMarginBeginEnd" />
							</HBox>
							<HBox width="50%" alignContent="End">
								<Label text="Work Center: " design="Bold" />
								<Label id="SPWorkCenter" text="V90Q3E31" class="sapUiTinyMarginBeginEnd" />
							</HBox>
						</HBox>
						<HBox class="sapUiSmallMarginTop">
							<Label text="Status : " />
							<Label id="SPGeneralStatus" text="In progress " class="sapUiTinyMarginBeginEnd" />
							<Label id="SPGeneralStatusVal" text="60%" />
						</HBox>
						<Panel expandable="true" expanded="false" width="100%"
							backgroundDesign="Transparent" class="sapUiSmallMarginTopBottom">
							<headerToolbar>
								<Toolbar height="1.2rem">
									<ProgressIndicator id="SPStatusInd"
										percentValue="60" displayValue="60%" showValue="true" state="Success"
										width="100%" class="progressBarOP" />
								</Toolbar>
							</headerToolbar>
							<content>
								<Text text="Lorem ipsum dolor st amet, consetetur sadipscing elitr" />
							</content>
						</Panel>

						<HBox>
							<HBox id="SPOperator" width="50%" alignContent="Start">
								<Label text="LT" class="rond sapUiTinyMarginEnd"
									textAlign="Center" />
								<Label text="assigned to : " class="sapUiTinyMarginEnd" />
								<Label id="SPOperatorName" text="Luisa T." />
							</HBox>
							<HBox width="50%" justifyContent="End" id="SPIcons">
								<Button id="SPIcon1" icon="sap-icon://wrench" type="Transparent"
									enabled="false"></Button>
								<Button id="SPIcon2" icon="sap-icon://wrench" type="Transparent"
									enabled="false"></Button>
							</HBox>
						</HBox>
					</VBox>
					<Button text="Reschedule" type="Transparent" icon="sap-icon://fob-watch"
						class="sapUiTinyMarginBeginEnd" press="onReschedulePress">
					</Button>
					<Button text="Add Operator" type="Transparent" icon="sap-icon://company-view"
						class="sapUiTinyMarginBeginEnd" press="onAssignOpPress">
					</Button>
					<Button text="Set OSW" type="Transparent" icon="sap-icon://forward"
						class="sapUiTinyMarginBeginEnd" press="onSetOSWPress">
					</Button>
				</CustomListItem>
			</List>			
			</Page>
			<Page id="Reschedule">
				<Button id="toto" text="toto" />
			</Page>
		</NavContainer>
