<mvc:View controllerName="airbus.mes.worktracker.views.masterpage" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout">
	<Page title="{i18n>appTitle}" enableScrolling="false" id="AppPageWT"
		showNavButton="true" navButtonPress="onNavBack"
		class="WorkTrackerApp sapUiResponsiveContentPadding GenricBgColor">

		<customHeader>
			<Toolbar class="pageHeader">
				<content>

					<Image src="images/Airbus.png" width="10rem" height="2rem" press="goToHome" />
					<ToolbarSeparator />
					<Label text="MES" class="pageTitle" />
					<ToolbarSpacer />
					<core:Icon src="sap-icon://customer" />
					<Label text="{i18n>header.welcome}" class="pageWelcome" />
					<Label id="user_id"
						text="{userDetailModel>/Rowsets/Rowset/0/Row/0/first_name}"
						design="Bold" class="pageUsername" />
					<ToolbarSeparator />
					<!-- <Button text="{i18n>header.logout}" type="Transparent" icon="sap-icon://log"
						class="whiteColor whiteButton"></Button>
					<ToolbarSeparator /> -->
					<Select class="sapUiTinyMarginBeginEnd pageHeader pageHeaderBlue">
						<core:Item text="English" />
						<core:Item text="Deutsch" />
					</Select>
					<ToolbarSeparator />
					<Button id="settingsButton" type="Transparent"
						icon="sap-icon://action-settings" class="whiteColor whiteButton"
						press="openSettings"></Button>
					<ToolbarSeparator />
					<Button id="helpButton" type="Transparent"
						icon="sap-icon://sys-help" class="whiteColor whiteButton"
						press="openHelp"></Button>
				</content>
			</Toolbar>
		</customHeader>
		<!-- <subHeader><Toolbar id="subheader" class="pageHeader"></Toolbar></subHeader> -->
		<content>
			<!-- inserted by routing -->
		</content>
	</Page>
</mvc:View>
