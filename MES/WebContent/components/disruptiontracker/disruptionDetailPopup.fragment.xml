<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">

	<Dialog id="disruptionDetailPopUp" class="classDisruptionDetailPopUp"
		contentWidth="90%" contentHeight="90%" verticalScrolling="true"
		showHeader="false" afterClose="afterCloseDisruptnDetailPopUp">
		<content>
			<NavContainer id="disruptDetailNavContainer"
				afterNavigate="renderViews">
				<pages>

				</pages>
			</NavContainer>

		</content>
		<buttons>
			<Button id="btnUpdateDisruption" text="{StationTrackerI18n>update}"
				type="Accept" press="onUpdateDisruption" visible="false" />
			<Button id="btnCancelDisruption" text="{StationTrackerI18n>cancel}"
				type="Reject" press="onCancelCreateDisruption" visible="false" />

			<Button text="{disruptiontrackerI18n>Close}" icon="sap-icon://decline"
				press="onCloseDisruptnDetailPopUp" />
		</buttons>
	</Dialog>

</core:FragmentDefinition>