<mvc:View controllerName="airbus.mes.disruptiontracker.disruptions"
	xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page class="disruptions" showHeader="false">
	
		<subHeader>
			<Toolbar>
				<ToolbarSpacer />
				<Text text="{disruptiontrackerI18n>disruptionsTitle}" class="headerText" />
				<ToolbarSpacer />
			</Toolbar>
		</subHeader>

		<Panel width="100%">
			<content>

				<Toolbar>
					<ComboBox class="sapUiMediumMarginEnd" placeholder="{disruptiontrackerI18n>selectStation}"
						items="{ path: 'disruptionsFilterData>/filters' }">
						<core:Item key="{disruptionsFilterData>key}" text="{disruptionsFilterData>name}" />
					</ComboBox>

					<ComboBox class="sapUiMediumMarginEnd" placeholder="{disruptiontrackerI18n>selectStatus}"
						items="{ path: 'disruptionsOrderData>/orders' }">
						<core:Item key="{disruptionsOrderData>key}" text="{disruptionsOrderData>name}" />
					</ComboBox>

					<SearchField width="13rem" placeholder="Search disruption" />
					<ToolbarSpacer />
					<Button text="{disruptiontrackerI18n>disruptionKPI}" />
				</Toolbar>

			</content>

		</Panel>
		
		
		<Table class="disruptionsTable" items="{ path: 'disruptionsListData>/Rowsets/Rowset/0/Row' }">

			<columns>
				<Column>
					<Text text="{disruptiontrackerI18n>operation}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>gravity}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>status}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>problem}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>responsibleGroup}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>severity}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>openingTime}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>fixedByTime}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>timeBofreNextEsc}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>solution}" />
				</Column>
				<Column>
					<Text text="{disruptiontrackerI18n>closureDate}" />
				</Column>
			</columns>
			
			<items>
				<ColumnListItem type="Navigation">
					<cells>
						<Text text="{disruptionsListData>Operation}" />
						<ObjectStatus class="sapUiSmallMarginBottom" text="{parts: [ {path: 'disruptionsListData>Status'}, {path: 'disruptionsListData>Gravity'}, {path: 'disruptionsListData>Severity'} ], formatter: 'airbus.mes.disruptiontracker.Formatter.setText'}"
							state="{parts: [ {path: 'disruptionsListData>Status'}, {path: 'disruptionsListData>Gravity'}, {path: 'disruptionsListData>Severity'} ], formatter: 'airbus.mes.disruptiontracker.Formatter.setState'}"
							icon="{path: 'disruptionsListData>Status', formatter: 'airbus.mes.disruptiontracker.Formatter.setIcon'}" />
						<Text text="{disruptionsListData>Status}" />
						<Text text="{disruptionsListData>Reason}" />
						<Text text="{disruptionsListData>ResponsibleGroup}" />
						<Text text="{disruptionsListData>Severity}" />
						<Text text="{disruptionsListData>OpeningTime}" />
						<Text text="{disruptionsListData>FixedByTime}" />
						<Text text="{disruptionsListData>TimeBeforeNextEscalation}" />
						<Text text="{disruptionsListData>Solution}" />
						<Text text="{disruptionsListData>ClosureDate}" />
					</cells>
				</ColumnListItem>
			</items>
			
		</Table>
	</Page>

</mvc:View>