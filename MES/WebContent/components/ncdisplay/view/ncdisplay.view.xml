<mvc:View
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:table="sap.ui.table"
          controllerName="airbus.mes.ncdisplay.controller.ncdisplay" >

    <Page enableScrolling="false" showHeader="false" class="sapUiSizeCozy mesOperationDetailView">
        <content>
            <table:Table id="ncDisplay" class="mesTable"
		                 rows="{path: 'ncdisplaydata>/ncDetailList/'}"
		                 itemPress="onLineClick"
		                 width="100%" visibleRowCountMode="Auto" selectionMode="None" >

				<table:extension>
					<VBox id="ncDisplayCheck" class="mesRadioButtonsCheck">
		              <RadioButtonGroup columns="2" select="onSelectLevel">
		                    <buttons>
		                        <RadioButton id="ncDisplayOpe" text="For Operation"/>
		                        <RadioButton id="ncDisplayOrder" text="For whole work order"/>
		                    </buttons>
		                </RadioButtonGroup>
					</VBox>					
				</table:extension>

				<table:columns>
					<table:Column>
						<Label textAlign="Center" text="ACP Status" />
						<table:template>
							<Text text="{ncdisplaydata>acpStatus}" />
						</table:template>
					</table:Column>
					<table:Column>
						<Label textAlign="Center" text="Type" />
						<table:template>
							<Text text="{ncdisplaydata>ncType}" />
						</table:template>							
					</table:Column>
					<table:Column>
						<Label textAlign="Center" text="Reference Number" />
						<table:template>
							<Text text="{ncdisplaydata>ncReference}" />
						</table:template>						
					</table:Column>
					<table:Column>
						<Label textAlign="Center" text="Title" />
						<table:template>
							<Text text="{ncdisplaydata>description}" />
						</table:template>								
					</table:Column>
				</table:columns>

            </table:Table>

        </content>

    </Page>
</mvc:View>


