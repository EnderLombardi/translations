<mvc:View
          xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:table="sap.ui.table"
          controllerName="airbus.mes.ncdisplay.controller.ncdisplay" >

    <Page enableScrolling="false" showHeader="false" class="sapUiSizeCozy mesOperationDetailView">
        <content>
            <table:Table id="ncDisplay" class="mesTable"
		                 rows="{path: 'ncdisplaydata>/ncDetailList/'}"
		                 itemPress="onLineClick"
		                 width="100%" visibleRowCountMode="Auto" selectionMode="None" >

				<table:extension>
					<VBox id="ncDisplayCheck" class="mesRadioButtonsCheck">
		              <RadioButtonGroup columns="2" select="onSelectLevel">
		                    <buttons>
		                        <RadioButton id="ncDisplayOpe" text="{i18ncdisplaylinksModel>NCDisplayOperation}"/>
		                        <RadioButton id="ncDisplayOrder" text="{i18ncdisplaylinksModel>NCDisplayWorkOrder}"/>
		                    </buttons>
		                </RadioButtonGroup>
					</VBox>					
				</table:extension>

				<table:columns>
 					<table:Column width="10%">
						<Label textAlign="Center" text="{i18ncdisplaylinksModel>NCDisplayMoreDetail}" />
						<table:template>
							<Button icon="sap-icon://inspection"
										press="onLineClick"/>
<!-- 							        visible="{path:'ncdisplaydata>ncType' , formatter:'airbus.mes.ncdisplay.util.Formatter.showButton'}" 
									enabled="{path:'ncdisplaydata>ncType' , formatter:'airbus.mes.ncdisplay.util.Formatter.showButton'}" -->
						</table:template>
					</table:Column>			
					<table:Column width="10%">
						<Label textAlign="Center" text="{i18ncdisplaylinksModel>NCDisplayACPStatus}" />
						<table:template>
							<Text text="{ncdisplaydata>acpStatus}" />
						</table:template>
					</table:Column>
					<table:Column width="10%">
						<Label textAlign="Center" text="{i18ncdisplaylinksModel>NCDisplayType}" />
						<table:template>
							<Text text="{ncdisplaydata>ncType}" />
						</table:template>							
					</table:Column>
					<table:Column width="10%">
						<Label textAlign="Center" text="{i18ncdisplaylinksModel>NCDisplayReference}" />
						<table:template>
							<Text text="{ncdisplaydata>ncReference}" />
						</table:template>						
					</table:Column>
					<table:Column>
						<Label textAlign="Center" text="{i18ncdisplaylinksModel>NCDisplayTitle}" />
						<table:template>
							<Text text="{ncdisplaydata>description}" />
						</table:template>								
					</table:Column>
				</table:columns>

            </table:Table>

        </content>

    </Page>
</mvc:View>


