<mvc:View controllerName="airbus.mes.polypoly.App" xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core" displayBlock="true">
	<App id="singleFile">
		<Page>
			<headerContent>
				<Button text="Program" press="onProgram">
					<layoutData>
						<l:GridData hCells="1" />
					</layoutData>
				</Button>
				<Button text="Plant" press="onPlant">
					<layoutData>
						<l:GridData hCells="1" />
					</layoutData>
				</Button>
				<Button text="Line" press="onLine">
					<layoutData>
						<l:GridData hCells="1" />
					</layoutData>
				</Button>
				<Button text="Station" press="onStation">
					<layoutData>
						<l:GridData hCells="1" />
					</layoutData>
				</Button>
				<Button id="RessourcePool" text="Ressource Pool"
					press="onRessourcePool">
					<layoutData>
						<l:GridData hCells="1" />
					</layoutData>
				</Button>
				<Button text="Assign Work" press="onAssignWork"
					enabled="false">
					<layoutData>
						<l:GridData hCells="1" />
					</layoutData>
				</Button>
			</headerContent>
			<content title="Polyvalence - Polycompetence Station ...">
				<mvc:XMLView id="polypolyView" viewName="airbus.mes.polypoly.main" />
			</content>
			<footer>
				<OverflowToolbar id="otbFooter" design="Standardheader">
					<OverflowToolbarButton text="Settings"
						icon="sap-icon://action-settings" press="handleSettingsPress" />
					<OverflowToolbarButton text="Home" icon="sap-icon://home"
						press="handleHomePress" />
					<ToolbarSpacer />
					<OverflowToolbarButton text="Left"
						icon="sap-icon://navigation-left-arrow" press="handleLeftPress" />
					<OverflowToolbarButton text="Right"
						icon="sap-icon://navigation-right-arrow" press="handleRightPress" />
				</OverflowToolbar>
			</footer>
		</Page>
	</App>
</mvc:View>