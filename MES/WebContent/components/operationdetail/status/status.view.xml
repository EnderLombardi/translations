<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="airbus.mes.operationdetail.status.status"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page showHeader="false" enableScrolling="false" >
		
		<Text id="StatutLabel" class="StatutLabel" text="{i18n>Statut}" />
		
		<VBox justifyContent="SpaceBetween"  id="Statutprogress">
			<HBox justifyContent="Center" >
				<items>
					<Title 	id="operationStatus" 
							class="sapUiSmallMarginTop"
							text="{parts: ['operationDetailModel>/Rowsets/Rowset/0/Row/0/status', 
								 'operationDetailModel>/Rowsets/Rowset/0/Row/0/progress'],
				 				 formatter:'airbus.mes.operationdetail.Formatter.setSliderStatus'}"
							level="H1" 
							titleStyle="H1" />
				</items>
			</HBox>
			<Text id="progressLabel" class="progressLabel" text="{i18n>progress}: {operationDetailModel>/Rowsets/Rowset/0/Row/0/progress}%">
			</Text>

			<Slider id="progressSliderDisplay" max="100" min="0"
				class="sliderDisplayStyle sliderCompletedColor" showHandleTooltip="true" width="100%"
				value="{operationDetailModel>/Rowsets/Rowset/0/Row/0/progress}"
				enabled="false">
			</Slider>
			<HBox class="sapUiMediumMarginTop" alignItems="Center" justifyContent="Center">
				<Text id="blockedText" text="{i18n>blockedText}"  visible="{path :'operationDetailModel>/Rowsets/Rowset/0/Row/0/status', formatter : 'airbus.mes.operationdetail.Formatter.goToDisrptionVisibility'}"  textAlign="Center" />
				<Button id="goToDisruption" text="{i18n>goToDisruption}" type="Transparent"  visible="{path :'operationDetailModel>/Rowsets/Rowset/0/Row/0/status', formatter : 'airbus.mes.operationdetail.Formatter.goToDisrptionVisibility'}"  press="onPressGotoDisruptios"/>
			</HBox>

		</VBox>
	</Page>
</core:View>
