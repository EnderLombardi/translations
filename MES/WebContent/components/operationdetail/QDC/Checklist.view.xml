<core:View xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:tab="sap.ui.table"
	controllerName="airbus.mes.operationdetail.QDC.Checklist">
	<Page showHeader="false" height="100%">
		<content>
			<tab:TreeTable rows="{QDCModel>/root}" class="sapUiLargeMargin">
				<tab:toolbar>
					<Toolbar>
						<Title text="{i18n>CheckListAndRecords}" />
					</Toolbar>
				</tab:toolbar>
				<tab:columns>
					<tab:Column>
						<Label text="{i18n>PointofAttention}" />
						<tab:template>
							<Text text="{QDCModel>name}" class="AllignItem" />
						</tab:template>
					</tab:Column>
					<tab:Column>
						<Label text="{i18n>record}" />
						<tab:template>
							<Label text="{QDCModel>description}" class="AllignItem" />
						</tab:template>
					</tab:Column>
				</tab:columns>
			</tab:TreeTable>
			<HBox justifyContent="End" class="sapUiLargeMargin">
				<Button text="Confirm"></Button>
			</HBox>

		</content>
	</Page>
</core:View>