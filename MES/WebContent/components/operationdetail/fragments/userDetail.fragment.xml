<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover title="{i18n>userDetail}" placement="Bottom">
		<HBox class="adjustFlex">
			<Image class="img-circle" src="images/User.png" densityAware="false" height="100%" width="100%"></Image>
			<VBox>
				<Label
					text="{parts:[{path:'currentOperatorModel>fname'}, {path:'currentOperatorModel>lname'}], formatter:'airbus.mes.worktracker.util.Formatter.getFullName'}" />
			</VBox>
		</HBox>
	</Popover>
</core:FragmentDefinition>