<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
    <Dialog  id="dispatchObserverDialogue" contentHeight="40%" contentWidth="60%"
        title="Dispatch to Observer">
        <content>

		<f:SimpleForm id="dispatch" minWidth="1024"
                backgroundDesign="Transparent" maxContainerCols="2" editable="true"
                layout="ResponsiveGridLayout" labelSpanL="2" labelSpanM="2"
                labelSpanS="2" columnsL="1" columnsM="1" class="sapUiLargeMarginTop">
          
           <f:content>
				
				<RadioButton groupName="GroupLevel" text="Assign Work order to" selected="true" select="onChangeLevelAssign" />
				
				<RadioButton groupName="GroupLevel" text="Assign operation to" select="onChangeLevelAssign"/>
            </f:content>
            <f:content>
	             <Label text="List of Groups "/>
	             <Select change="onSelectionObserver" id="observerSelectBox" forceSelection="false"
	                 items="{dispatchModel>/Rowsets/Rowset/0/Row}">
	                 <core:Item key="{dispatchModel>USER_GROUP}" text="{dispatchModel>DESCRIPTION}" />
	             </Select>   
	        </f:content>
       </f:SimpleForm>
        </content>
        <buttons>
            <Button id="ok" text="Ok" press="onDispatchObserver"
                type="Transparent" />
            <Button id="cancel" text="Cancel" press="onCancelDispatchObserver" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
