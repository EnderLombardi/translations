<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:ui="sap.ui.layout">
	<Dialog title="Columns Edit" icon="sap-icon://edit" type="Default Message">
		<content>
			<HBox height="100%" class="fixHboxItemDisplay">
				<Panel class="panelBorder" expanded="true" expandable="false"
					id="AcpngPanel" width="100%" height="100%" headerText="Header">
					<headerToolbar>
						<Toolbar>
							<Bar design="Header">
								<contentMiddle>
									<Text class="sapMPanelHdr panelHeaderCustomStyle" text="title" />
								</contentMiddle>
							</Bar>
						</Toolbar>
					</headerToolbar>
					<content height="100%">
						<HBox height="100%" class="fixHboxItemDisplay">

							<List id="listAvailableColumns" height="100%"
								items="{acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column}"
								includeItemInSelection="true" noDataText="{i18nModel>NoColumnAvailable}"
								rememberSelections="true" growingScrollToLoad="true" growing="true" mode="true" selectionMode="Single"
								growingThreshold="1000">
									
														<core:Item key="{Name}" text="{Name}" />
									
										<!-- <ui:HorizontalLayout visible="{path:'acpnglinksWorkOrderDetail>Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanLeft'}">
													<Text text="{acpnglinksWorkOrderDetail>Name}" > </Text>
													
										</ui:HorizontalLayout> -->
							</List>
						</HBox>
					</content>

				</Panel>
				<VBox class="shiftButtons" justifyContent="Center" alignItems="Center">
					<items>
						<Button icon="sap-icon://navigation-right-arrow" press="onAssignColumns"
							tooltip="{i18nModel>Assign}" />
						<Button icon="sap-icon://navigation-left-arrow" press="onAssignColumns"
							tooltip="{i18nModel>Remove}" />
					</items>
				</VBox>
				<Panel class="panelBorder" expanded="true" expandable="false"
					id="assignedUsersPanel" width="100%" height="95%"
					headerText="{i18nModel>AssignedUsers}">
					<headerToolbar>

						<Toolbar>
							<Bar design="Header">
								<contentMiddle>
									<Text class="sapMPanelHdr panelHeaderCustomStyle" text="{i18nModel>AssignedUsers}" />
								</contentMiddle>
							</Bar>
						</Toolbar>
					</headerToolbar>
					<content>
						<HBox height="100%" class="fixHboxItemDisplay">
							<List id="listAllocatedcolumns" items="{acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column}"
								includeItemInSelection="true" rememberSelections="false"
								growingScrollToLoad="true" growing="true" growingThreshold="1000"
								noDataText="{i18nModel>NoUserAssigned}">
								<CustomListItem>
									<content>
										<ui:HorizontalLayout visible="{path:'acpnglinksWorkOrderDetail>Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
													<Text text="{acpnglinksWorkOrderDetail>Name}" > </Text>				
										</ui:HorizontalLayout>
									</content>
								</CustomListItem>
							</List>
						</HBox>
					</content>
				</Panel>
			</HBox>
		</content>
	</Dialog>
</core:FragmentDefinition>