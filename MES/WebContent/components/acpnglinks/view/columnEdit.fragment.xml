<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:ui="sap.ui.layout">
	<Dialog title="{i18nacpnglinksModel>ColumnEditTitle}" icon="sap-icon://edit" showCloseButton="true"
		contentWidth="40%" contentHeight="60%" id="columnEditDialog">
		<content height="100%" width="100%">
			<HBox height="100%" class="fixHboxItemDisplay">
				<Panel class="panelBorder" expanded="true" expandable="false"
					id="AcpngPanel" width="100%" height="100%"
					headerText="i18nacpnglinksModel>ColumnEditUnassignedColumns">
					<headerToolbar>
						<Toolbar>
							<Bar design="Header">
								<contentMiddle>
									<Text class="sapMPanelHdr panelHeaderCustomStyle"
										text="{i18nacpnglinksModel>ColumnEditUnassignedColumns}" />
								</contentMiddle>
							</Bar>
						</Toolbar>
					</headerToolbar>
					<content height="100%">
						<HBox height="100%" class="fixHboxItemDisplay">
							<List id="listAvailableColumns" mode="SingleSelectMaster"
								items="{acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column}">
								<CustomListItem
									visible="{path:'acpnglinksWorkOrderDetail>Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanLeft'}">
									<HBox class="fixHboxItemDisplay">
										<ui:HorizontalLayout>
											<Text class="acpnglinksNotVisible" text="{acpnglinksWorkOrderDetail>Name}"></Text>
										</ui:HorizontalLayout>
									</HBox>
								</CustomListItem>
							</List>
						</HBox>
					</content>
				</Panel>
				<VBox class="shiftButtons" justifyContent="Center" alignItems="Center">
					<items>
						<Button icon="sap-icon://navigation-right-arrow" press="onAssignColumns"
							tooltip="{i18nacpnglinksModel>ColumnEditAssign}" />
						<Button icon="sap-icon://navigation-left-arrow" press="onUnassignColumns"
							tooltip="{i18nacpnglinksModel>ColumnEditRemove}" />
					</items>
				</VBox>
				<Panel class="panelBorder" expanded="true" expandable="false"
					id="assignedColumnsPanel" width="100%" height="100%"
					headerText="{i18nacpnglinksModel>ColumnEditAssignedColumns}">
					<headerToolbar>
						<Toolbar>
							<Bar design="Header">
								<contentMiddle>
									<Text class="sapMPanelHdr panelHeaderCustomStyle"
										text="{i18nacpnglinksModel>ColumnEditAssignedColumns}" />
								</contentMiddle>
							</Bar>
						</Toolbar>
					</headerToolbar>
					<content>
						<HBox height="100%" class="fixHboxItemDisplay">
							<List id="listAllocatedcolumns"
								items="{acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column}"
								mode="SingleSelectMaster" growingScrollToLoad="true" growing="true"
								growingThreshold="1000">
								<CustomListItem
									visible="{path:'acpnglinksWorkOrderDetail>Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
									<content>
										<HBox class="fixHboxItemDisplay">
											<ui:HorizontalLayout>
												<Text class="acpnglinksVisible" text="{acpnglinksWorkOrderDetail>Name}">
												</Text>
											</ui:HorizontalLayout>
										</HBox>
									</content>
								</CustomListItem>
							</List>
						</HBox>
					</content>
				</Panel>
			</HBox>
		</content>
		<endButton>
            <Button type="Transparent" icon="sap-icon://decline" class="sapUiTinyMarginBeginEnd" text="{i18nacpnglinksModel>Close}" press="onDialogClose" />
        </endButton>
	</Dialog>
</core:FragmentDefinition>