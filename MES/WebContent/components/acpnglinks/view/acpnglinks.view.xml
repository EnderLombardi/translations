<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" controllerName="airbus.mes.acpnglinks.controller.acpnglinks"
    xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:tab="sap.ui.table">
    <Page showHeader="false" height="100%" enableScrolling="false">
        <content>

            <VBox id="ACPnGLinks" class="ACPnGLinkslist">
                <tab:TreeTable id="ACPnGTreeTable" class="ACPnGTreeTable"
                    rows="{acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Row/}"
                    cellClick="OnSelectionChange"
                    visibleRowCountMode="Fixed" height="100%" enableColumnReordering="true"  columnMove="updateColumn">
                    <tab:toolbar>
                    <Toolbar>
                        <Title id="title" text="ACPnG Links"/>
                        <ToolbarSpacer/>
                        <Button text="Change Columns" press="onColumnsChange"/>
                    </Toolbar>
                    </tab:toolbar>
                    <tab:columns>
                        <tab:Column visible="true" sortProperty="Type">
                            <Label class="ACPnGtLabel" text="Type" />
                            <tab:template>
                                <Text text="{acpnglinksWorkOrderDetail>Type}" class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/2/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}" sortProperty="Ref">
                            <Label class="ACPnGtLabel" text="Reference" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>Ref}" class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/3/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}" sortProperty="Review_end">
                            <Label class="ACPnGtLabel" text="ACPnG review end date" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>Review_end}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/4/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}" sortProperty="Note">
                            <Label class="ACPnGtLabel" text="Note" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>Note}" class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/5/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}" sortProperty="Family_target">
                            <Label class="ACPnGtLabel" text="Family target" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>Family_target}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/6/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="STV" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/7/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="ACP workstation" />
                            <tab:template>
                                <Label  text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/8/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="CA" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/9/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="Father link" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/10/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="Blocking reason" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/11/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="User status" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/12/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="ACPnG execution station" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/13/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="Origin workstation" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/14/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="TDL" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/15/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="Upper family" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/16/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="Zoning" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/17/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="Material description" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                        <tab:Column visible="{path:'acpnglinksWorkOrderDetail>/Rowsets/Rowset/0/Columns/Column/18/Visible' , formatter:'airbus.mes.acpnglinks.util.Formatter.toBooleanRight'}">
                            <Label class="ACPnGtLabel" text="ATA/SUB-ATA" />
                            <tab:template>
                                <Label text="{acpnglinksWorkOrderDetail>description}"
                                    class="AllignItem" />
                            </tab:template>
                        </tab:Column>
                    </tab:columns>
                </tab:TreeTable>
            </VBox>
        </content>
    </Page>
</mvc:View>

