<core:FragmentDefinition
       xmlns="sap.m"
       xmlns:core="sap.ui.core">
       <Popover class="sapUiContentPadding"
              placement="Bottom">
             <VBox>
              <Button text="{i18n>stationTracker}" type="Transparent" press="gotoStationTracker"/>
              <Button text="{i18n>stationKPIHeader}" type="Transparent"  press="displayStationKPIHeader" />
              <Button text="{i18n>disruption_AndonTracker}" type="Transparent" press="gotoDisruption_AndonTracker"/>
              <Button text="{i18n>stationHandover}" type="Transparent" />
              </VBox>
       	 <footer>
             <Toolbar>
<!--                <ToolbarSpacer/> -->
                   <core:Icon src="sap-icon://alert" class="sapUiSmallMarginBegin"/>
                       <Button id="reportDisruption"
                               text="{i18n>reportDisruption}"
                               press="handleEmailPress" />             
             </Toolbar>
         </footer>
       </Popover>
</core:FragmentDefinition>
