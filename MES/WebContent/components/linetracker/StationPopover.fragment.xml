<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="stationPopover"
		class="sapUiPopupWithPadding"
		placement="Bottom"
		showHeader="false"
		enableScrolling="false" >
		<content>
			<VBox alignItems="Center">
				<Button icon="sap-icon://delete" type="Transparent" class="stationPopoverBtns" width="30%" press="onDeleteStation" />
				<Button icon="sap-icon://edit" type="Transparent" class="stationPopoverBtns" width="30%" press="onEditStation" />
			</VBox>
		</content>
	</Popover>
</core:FragmentDefinition>