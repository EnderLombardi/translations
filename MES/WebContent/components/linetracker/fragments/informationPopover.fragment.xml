<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover showHeader="false" placement="Left" showArrow="false" class="informationColor rightPlace" afterClose="onCloseInformation">
		<VBox>
			<items>
				<Label text="{i18n>Legend}" class="sapUiTinyMarginTopBottom sapUiTinyMarginBeginEnd" design="Bold"/>
				<HBox  alignItems="Center"  class="sapUiTinyMarginTopBottom">
					<Button icon="sap-icon://synchronize" type="Transparent"></Button> 
					<Label text="{i18n>loadNextMsn}" />
				</HBox>
				<HBox alignItems="Center" class="sapUiTinyMarginTopBottom">
					<Button icon="sap-icon://media-play" type="Transparent"></Button> 
					<Label text="{i18n>startAssembly}"/>
				</HBox>
				<HBox alignItems="Center" class="sapUiTinyMarginTopBottom">
					<Button icon="sap-icon://accept" type="Transparent"></Button> 
					<Label text="{i18n>endAssembly}"/>
				</HBox>
				<HBox alignItems="Center" class="sapUiTinyMarginTopBottom">
					<Button icon="sap-icon://border" type="Transparent"></Button> 
					<Label text="{i18n>emptyStation}"/>
				</HBox>
				<HBox alignItems="Center" class="sapUiTinyMarginTopBottom">
					<Button icon="sap-icon://undo" type="Transparent"></Button> 
					<Label text="{i18n>undolastaction}"/>
				</HBox>	
				<HBox alignItems="Center" class="sapUiTinyMarginTopBottom">
					<Button icon="sap-icon://alert"  type="Transparent"></Button> 
					<Label text="{i18n>stateUnavailable}"/>
				</HBox>																
			</items>
		</VBox>
	</Popover>
</core:FragmentDefinition>