<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover id="taktActionPopover" class="sapUiContentPadding" placement="PreferredBottomOrFlip" showHeader="false">
		<VBox>
			<Button text="{i18n>loadNextMsn}" type="Transparent" press="loadNextMsn" />
			<HBox alignItems="Center" justifyContent="Middle">
				<Text text="07428" />
				<Image height="1.8rem" width="100%" src="../images_locale/Emirates_logo.jpg"></Image>
			</HBox>
			<Button text="{i18n>startAssembly}" type="Transparent" press="startAssembly" />
			<Button text="{i18n>endAssembly}" type="Transparent" press="endAssembly" />
			<Button text="{i18n>emptyStation}" type="Transparent" press="emptyStation" />
			<Button text="{i18n>undo}" type="Transparent" press="undo" />
		</VBox>
	</Popover>
</core:FragmentDefinition>
