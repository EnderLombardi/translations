<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		id="valueHelpDialog"
		title="{i18n>selectLine}"
		class="sapUiPopupWithPadding"
		items="{lineVariantModel>/variantNameList}"
		search="_handleValueHelpSearch"
		liveChange="_handleValueHelpSearch"
		confirm="handleSelectedLineValueHelp"
		cancel="_handleValueHelpClose">
		<StandardListItem
			title="{lineVariantModel>variantName}"
			description="{lineVariantModel>Description}" />
	</SelectDialog>
</core:FragmentDefinition>