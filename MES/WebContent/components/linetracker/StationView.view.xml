<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout"
	xmlns:custom="airbus.mes.linetracker.customControl" xmlns:chart="sap.suite.ui.microchart" xmlns:viz="sap.viz.ui5.controls"
	xmlns:viz.data="sap.viz.ui5.data" xmlns:vtype="sap.viz.ui5.types"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" controllerName="airbus.mes.linetracker.StationView"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<!-- <Page enableScrolling="false" showHeader="false"> <content> -->
	<HBox id="staionHbox" height="100%">
		<items>
			<FlexBox id="staionVbox1" items="{newStationModel>/}" direction="ColumnReverse"
				class="stationButtons">
				<items>
					<!-- <CustomTile class="myCustomTileBlank"> <content> -->
					<VBox justifyContent="Center">
						<Button
							text="{parts:[{path:'newStationModel>Line'},{path:'newStationModel>Station'}] , formatter:'airbus.mes.linetracker.util.Formatter.lineFormatter'}"
							width="100%" press="onProductionSelect" />
						<Button text="Refresh operations" type="Reject"
							press="airbus.mes.linetracker.util.ModelManager.refreshOperation" />
					</VBox>
					<!-- </content> </CustomTile> -->
				</items>
			</FlexBox>
			<VBox id="staionVbox2" items="{newStationModel>/}" class="stationTiles"
				direction="ColumnReverse">
				<items>
					<CustomTile class="myStationTile" press="lockStation">
						<content>
							<HBox height="inherit" class="stationTilesHbox">
								<items>
									<custom:customStationBox class="stationStationBox"
										height="100%"
										heading="Station {parts:[{path:'newStationModel>Line'},{path:'newStationModel>Station'}] , formatter:'airbus.mes.linetracker.util.Formatter.stationName'}"
										state="Error" msn="{newStationModel>MSN}" hand="{newStationModel>HAND}"
										stationHeadColor="{path:'newStationModel>Conveyor_Status' , formatter:'airbus.mes.linetracker.util.Formatter.stationColor'}"
										lineNumber="newStationModel>Line" taktResourceStatus="{newStationModel>TAKT_STATUS}">
										<Image class="stationDetailImgStation"
											src="{path:'newStationModel>TAKT_STATUS' , formatter:'airbus.mes.linetracker.util.Formatter.imageFormatter'}">
										</Image>
									</custom:customStationBox>
									<viz:VizFrame legendVisible="false" height="100%"
										width="100%" vizType='donut' >
										<viz:dataset>
											<viz.data:FlattenedDataset data="{newStationModel>Donut}">
												<viz.data:dimensions>
													<viz.data:DimensionDefinition
														name="Name" value="{name}" />
												</viz.data:dimensions>
												<viz.data:measures>
													<viz.data:MeasureDefinition
														name="Value" value="{value}" />
												</viz.data:measures>
											</viz.data:FlattenedDataset>
										</viz:dataset>
										<viz:feeds>
											<viz.feeds:FeedItem uid="size" type="Measure"
												values="Value" />
											<viz.feeds:FeedItem uid="color" type="Dimension"
												values="Name" />
										</viz:feeds>
									</viz:VizFrame>
									<custom:sCustomProductionBox
										height="100%" progress="{newStationModel>Progress}" takt="{newStationModel>Takt}"
										stv="{newStationModel>STV}" taktTime="{newStationModel>TaktTime}"
										open="{newStationModel>Andon_raised}" escalated="{newStationModel>Andon_escalated}"
										openStatus="{newStationModel>Andon_rai_stat}" escalatedStatus="{newStationModel>Andon_esc_stat}"
										width="100%" />
									<custom:customChartBox width="100%"
										height="100%" rto="{newStationModel>RTO} People" takt="{newStationModel>Target_Takt}"
										allocValue="{newStationModel>Labour_Assigned}"
										><!-- totalTimeValue="{path:'newStationModel>Total_Time' , formatter:'airbus.mes.linetracker.util.Formatter.totalTimeFormatter'}" -->
										<custom:content height="100%">
											<chart:BulletMicroChart size="XL"
												scale="Hours" targetValue="{path:'newStationModel>Total_Time' , formatter:'airbus.mes.linetracker.util.Formatter.totalTimeFormatter'}" width="70%" minValue="0"
												scaleColor="MediumLight" showActualValue="true"
												showTargetValue="true" showValueMarker="true" mode="Actual">
												<chart:actual>
													<chart:BulletMicroChartData
														value="{newStationModel>Actual/value}" color="{newStationModel>Actual/color}" />
												</chart:actual>
												<chart:thresholds>
													<chart:BulletMicroChartData
														value="{newStationModel>Threshold/0/value}" />
													<chart:BulletMicroChartData
														value="{newStationModel>Threshold/1/value}" />
													<chart:BulletMicroChartData
														value="{newStationModel>Threshold/2/value}" />
													<chart:BulletMicroChartData
														value="{newStationModel>Threshold/3/value}" />
												</chart:thresholds>
											</chart:BulletMicroChart>
										</custom:content>
									</custom:customChartBox>
								</items>
							</HBox>
						</content>
					</CustomTile>
				</items>
			</VBox>
		</items>
	</HBox>
</core:View>