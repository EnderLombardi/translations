		<l:Splitter width="100%" height="100%">
			<List headerText="Program" items="{path: 'program>/ProgramCollection'}"
				width="95%" class="sapUiTinyMargin">
				<CustomListItem icon="{program>picture}">
					<HBox>
						<RadioButton selected="{program>selected}" groupName="GroupInputListItem"
							text="{program>prog}" />
						<Image src="{program>picture}" width="50%" />
					</HBox>
				</CustomListItem>
				<layoutData>
					<l:SplitterLayoutData size="20%" resizable="true" />
				</layoutData>
			</List>

			<List headerText="Plant" items="{path: 'site>/SiteCollection'}"
				width="95%" class="sapUiTinyMargin">
				<StandardListItem title="{site>Site}" type="Navigation" press="onPressSite" />
				<layoutData>
					<l:SplitterLayoutData size="25%" resizable="true" />
				</layoutData>
			</List>

			<vbm:AnalyticMap id="vbi" width="100%" height="100%"
				regions="{region>/Regions}" regionClick="onRegionClick">
				<vbm:regions>
					<vbm:Region code="{region>code}" color="{region>color}"
						tooltip="{region>country}" />
				</vbm:regions>
				<vbm:Spots items="{region>/Spots}" click="onClickItem"
					contextMenu="onContextMenuItem">
					<vbm:Spot position="{region>pos}" tooltip="{region>tooltip}"
						type="{region>type}" text="{region>text}" click="onClickSpot"
						contextMenu="onContextMenuSpot" />
				</vbm:Spots>
			</vbm:AnalyticMap>

			<VBox class="sapUiTinyMargin">
				<f:SimpleForm id="SimpleFormChange" minWidth="1024"
					visible="true" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
					labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
					columnsL="1" columnsM="1" class="editableForm" title="Other settings">
					<f:content>
						<Label id="lblLine" text="Line" design="Bold" />
						<ActionSelect id="selectLine"
							items="{site>/SiteCollection/0/LineCollection}" visible="true">
							<items>
								<core:Item key="{site>Line}" text="{site>Line}" />
							</items>
						</ActionSelect>
						<Label id="lblStation" text="Station" design="Bold" />
						<ActionSelect id="selectStation"
							items="{site>/SiteCollection/0/LineCollection/0/StationCollection}"
							visible="true">
							<items>
								<core:Item key="{site>Station}" text="{site>Station}" />
							</items>
						</ActionSelect>
						<Label id="lblMSN" text="MSN" design="Bold" />
						<ActionSelect id="selectMSN" items="{site>/SiteCollection}"
							visible="true">
							<items>
								<core:Item key="{site>MSN}" text="{site>MSN}" />
							</items>
						</ActionSelect>
					</f:content>
				</f:SimpleForm>
								<layoutData>
				<l:SplitterLayoutData size="20%" resizable="true" />
				</layoutData>
			</VBox>

		</l:Splitter>

	</Page>


