<mvc:View 
	controllerName="airbus.mes.displayOpeAttachments.controller.displayOpeAttachments"
	xmlns="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core">

	<m:Page showHeader="false" enableScrolling="false">


       <!--  <m:Text id="DOAlabel" class="DOAlabel" text="{i18nDisplayOpeAttachmentsModel>Documents}" /> -->

        <m:VBox id="displayOpeAttachmentsCheck" class="DOACheck">
            <m:RadioButtonGroup columns="2" select="onSelectLevel">
                <m:buttons>
                    <m:RadioButton id="workOrderButton" text="{i18nDisplayOpeAttachmentsModel>DOA_displayForOperation}"/>
                    <m:RadioButton id="operationButton" text="{i18nDisplayOpeAttachmentsModel>DOA_displayForWO}"/>
                </m:buttons>
            </m:RadioButtonGroup>
        </m:VBox>

        <m:content>
            <TreeTable
                    id="DOATable"
                    class="DOATable" 
                    rows="{path:'displayOpeAttachmentsWorkOrderDetail>/', parameters: {arrayNames:['documents']}}"
                    ariaLabelledBy="title" >
                <columns >
                    <Column width="13rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_type}"/>
                        <template>
                            <m:Text text="{displayOpeAttachmentsWorkOrderDetail>doc_type}"/>
                        </template>
                    </Column>
                    <Column width="9rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_type_description}"/>
                        <template>
                            <m:Text text="{displayOpeAttachmentsWorkOrderDetail>doc_type_description}"/>
                        </template>
                    </Column>
                    <Column width="11rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>item_nr}"/>
                        <template>
                            <m:Text text="{displayOpeAttachmentsWorkOrderDetail>item_nr}"/>
                        </template>
                    </Column>
                </columns>
                <columns>
                    <Column width="13rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_nr}"/>
                        <template>
                            <m:Text text="{displayOpeAttachmentsWorkOrderDetail>doc_nr}"/>
                        </template>
                    </Column>
                    <Column width="9rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_description}"/>
                        <template>
                            <m:Text text="{displayOpeAttachmentsWorkOrderDetail>doc_description}"/>
                        </template>
                    </Column>
                    <Column width="11rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_part}"/>
                        <template>
                            <m:Text text="{displayOpeAttachmentsWorkOrderDetail>doc_part}"/>
                        </template>
                    </Column>
                    <Column width="11rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_version}"/>
                        <template>
                            <m:Text text="{displayOpeAttachmentsWorkOrderDetail>doc_version}"/>
                        </template>
                    </Column>
                </columns>
            </TreeTable>
        </m:content>
    </m:Page>


</mvc:View>

