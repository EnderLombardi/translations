<mvc:View 
	controllerName="airbus.mes.displayOpeAttachments.controller.displayOpeAttachments"
	xmlns="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core">

	<m:Page showHeader="false" enableScrolling="false" height="100%">

        <m:VBox id="displayOpeAttachmentsCheck" class="DOACheck">
            <m:RadioButtonGroup columns="2" select="onSelectLevel">
                <m:buttons>
                    <m:RadioButton id="workOrderButton" text="{i18nDisplayOpeAttachmentsModel>DOA_displayForOperation}"/>
                    <m:RadioButton id="operationButton" text="{i18nDisplayOpeAttachmentsModel>DOA_displayForWO}"/>
                </m:buttons>
            </m:RadioButtonGroup>
        </m:VBox>

        <m:content>
            <TreeTable
                    id="DOATable"
                    class="DOATable" 
                    rows="{getOpeAttachments>/Rowsets/Rowset/0/Row}"
                    ariaLabelledBy="title">
                <columns>
                    <Column width="11rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_type}"/>
                        <template>
                            <m:Text text="{getOpeAttachments>dokar}"/>
                        </template>
                    </Column>

                    <!--no information for the moment
                    <Column width="9rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_type_description}"/>
                        <template>
                            <m:Text text="{getOpeAttachments>doc_type_description}"/>
                        </template>
                    </Column>-->

                    <!--to be deleted if confirmed by airbus
                    <Column width="11rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>item_nr}"/>
                        <template>
                            <m:Text text="{getOpeAttachments>item_nr}"/>
                        </template>
                    </Column>-->

                </columns>
                <columns>
                    <Column width="13rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_nr}"/>
                        <template>
                            <m:Text text="{getOpeAttachments>doknr}"/>
                        </template>
                    </Column>
                    <Column width="17rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_description}"/>
                        <template>
                            <m:Text text="{getOpeAttachments>descriptionWI}"/>
                        </template>
                    </Column>
                    <Column width="5rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_part}"/>
                        <template>
                            <m:Text text="{getOpeAttachments>doktl}"/>
                        </template>
                    </Column>
                    <Column width="5rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>doc_version}"/>
                        <template>
                            <m:Text text="{getOpeAttachments>revision}"/>
                        </template>
                    </Column>
                    
                    <!--file name ? will be present or not ?
                    <Column width="11rem">
                        <m:Label class="DisOpAttLabel" text="{i18nDisplayOpeAttachmentsModel>file_name}"/> TO ADD IN i18n if used
                        <template>
                            <m:Text text="{getOpeAttachments>workInstruction}"/>
                        </template>
                    </Column>-->

                </columns>
            </TreeTable>
        </m:content>
    </m:Page>


</mvc:View>

