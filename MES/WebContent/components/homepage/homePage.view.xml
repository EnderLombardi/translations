			<TileContainer tileDelete="handleTileDelete"
				tiles="{1TileLineHome>/buttonDetail}" height="33%">
				<CustomTile press="onPressLine1" class="customTiles">
					<content>
						<VBox width="12rem" height="13rem" alAignItems="Center"
							class="margin">
							<items>
								<HBox width="100%" height="20%" alignItems="Center">
									<items>
										<Text text="{ path : '1TileLineHome>text' , formatter : '.getI18nValue' }" class="headerTileText" />
									</items>
								</HBox>
								<HBox width="100%" height="20%" alignItems="Center">
									<items>
										<Text text="Custom Text" class="CustomTileText" />
									</items>
								</HBox>
								<HBox width="100%" height="80%" alignItems="Center">
									<items>
										<core:Icon src="{1TileLineHome>icon}" class="IconTile"></core:Icon>
									</items>
								</HBox>
							</items>
						</VBox>
					</content>
				</CustomTile>
			</TileContainer>
			<TileContainer tileDelete="handleTileDelete"
