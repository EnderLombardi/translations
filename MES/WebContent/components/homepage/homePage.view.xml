									<items>
										<core:Icon src="{2TileLineHome>icon}" class="IconTile"></core:Icon>
									</items>
								</HBox>
							</items>
						</VBox>
					</content>
				</CustomTile>
			</TileContainer>
			<TileContainer tileDelete="handleTileDelete"
