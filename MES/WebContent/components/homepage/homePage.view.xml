								<HBox width="100%" height="80%" alignItems="Center">
									<items>
										<core:Icon src="{3TileLineHome>icon}" class="IconTile"></core:Icon>
									</items>
								</HBox>
							</items>
						</VBox>
					</content>
				</CustomTile>
