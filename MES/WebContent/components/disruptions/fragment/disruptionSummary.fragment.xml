<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<f:SimpleForm id="summaryForm" editable="false" title="" adjustLabelSpan="false">
		<f:content>
			<core:Title text="{i18nModel>summary}" />
			<VBox class="setMinWidth">

				<HBox>
					<Label text="{i18nModel>start}:" class="sapUiSmallMarginBegin" />
					<Text text="10:30"  />
					</HBox>
					<HBox>
					<Label text="{i18nModel>end}:" class="sapUiSmallMarginBegin" />
					<Text text="12:30"  />
				</HBox>
				<HBox>
					<Label text="{i18nModel>workcenter}:" class="sapUiSmallMarginBegin" />
					<Text text="V90Q3E31" width="100%" >
					</Text>
					<layoutData>
					<l:GridData span="L6 M8 S8" />
				</layoutData>
				</HBox>
				<HBox>
					<Label text="{i18nModel>status}:" class="sapUiSmallMarginBegin"></Label>
					<Text text="closed" />
				</HBox>
				<HBox class=" sapUiSmallMarginTop sapUiTinyMarginBegin">
				<Image
					src="https://dmiswde0.eu.airbus.corp/irj/go/km/docs/documents/Public%20Documents/Photos/NG000524.jpg"
					class="setImage " width="100%">
				</Image>
				<Text text="{i18nModel>issuedBy} R.Bouvard" class=" sapUiSmallMarginBegin">
				</Text>
				<layoutData>
					<l:GridData span="L12 M8 S8" />
				</layoutData>
			</HBox>

			<HBox class="sapUiSmallMarginTop sapUiTinyMarginBegin">
				<Image
					src="https://dmiswde0.eu.airbus.corp/irj/go/km/docs/documents/Public%20Documents/Photos/NG1FCF2.jpg"
					class="setImage" width="100%">
				</Image>
				<Text text="{i18nModel>assignedTo} N.Simond" class="sapUiSmallMarginBegin">
				</Text>
				<layoutData>
					<l:GridData span="L6 M8 S8" />
				</layoutData>
			</HBox>

			<HBox class="sapUiSmallMarginTop sapUiTinyMarginBegin">

				<core:Icon src="sap-icon://pending" color="#009de0" size="2.5rem">
				</core:Icon>
				<Text text="{i18nModel>timeLost}:25min" class="sapUiSmallMarginBegin sapUiSmallMarginTop" />
				<layoutData>
					<l:GridData span="L6 M8 S8" />
				</layoutData>
			</HBox>
				<layoutData>
					<l:GridData span="L12 M12 S12" />
				</layoutData>
			</VBox>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>
						