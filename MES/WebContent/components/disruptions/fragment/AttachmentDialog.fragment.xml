<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:u="sap.ui.unified">
	<Dialog id="idAttachmentDialog" contentWidth="90%"
		contentHeight="90%">
		<customHeader>
			<Toolbar>
				<Button icon="sap-icon://nav-back" press="onNavPress"
					class="sapUiSmallMarginBegin" />
				<Label text="{i18nModel>SelectDocs}" design="Bold"
					class="sapUiSmallMarginBegin" />
			</Toolbar>
		</customHeader>
		<content>
			<Toolbar>
				<Label text="{i18nModel>DisplayAttachments}" design="Bold" />
				<ToolbarSpacer></ToolbarSpacer>
				<RadioButton id="idCheckCurrOp" selected="true" text="{i18nModel>CurrOP}"
					select="" class="sapUiSmallMarginEnd" />
				<RadioButton id="idCheckCurrWO" text="{i18nModel>CurrWO}"
					select="" class="sapUiSmallMarginEnd" />
				<RadioButton id="idCheckDesktop" text="{i18nModel>Desktop}"
					select="" class="sapUiSmallMarginEnd" />
				<u:FileUploader id="idfileUploader" buttonText="{i18nModel>AttachDoc}"
					tooltip="{i18nModel>Attach}" icon="sap-icon://sys-monitor"
					sameFilenameAllowed="true" class="attachIcon" change="onFileSelect"
					buttonOnly="true" style="Transparent">

				</u:FileUploader>
			</Toolbar>

			<HBox>
				<Label text="{i18nModel>ListDocuments}" class="sapUiMediumMargin" design="Bold"></Label>
			</HBox>

			<List id="idList" class="sapUiSmallMarginBegin" items="{path: 'DesktopFilesModel>/'}">
				<!-- <StandardListItem/> -->

				<CustomListItem>
					<Toolbar>
						<core:Icon size="0.5rem" src="sap-icon://circle-task-2" />
						<Label text="{DesktopFilesModel>Title}" width="30%"/>
						<ToolbarSpacer width="65%" />
						<core:Icon size="1rem" src="sap-icon://delete" press="onDeletePress"/>
					</Toolbar>

				</CustomListItem>
			</List>


		</content>
		<beginButton>
			<Button text="{i18nModel>Attach}" />
		</beginButton>
		<endButton>
			<Button text="{i18nModel>cancel}" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>