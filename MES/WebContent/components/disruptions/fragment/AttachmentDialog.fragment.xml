<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:cData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog id="idAttachmentDialog">
		<content>
			<Toolbar>
				<Button icon="sap-icon://nav-back" press="onNavPress" />
				<Label text="Select Documents to attach to Disruption" design="Bold"/>
				<ToolbarSpacer></ToolbarSpacer>
				
				<CheckBox id="idCheckCurrOp" text="{i18nModel>CurrOP}"
					select="" class="sapUiSmallMarginEnd" />
				<CheckBox id="idCheckCurrWO" text="{i18nModel>CurrWO}"
					select="" class="sapUiSmallMarginEnd" />
				<CheckBox id="idCheckDesktop" text="{i18nModel>Desktop}"
					select="" class="sapUiSmallMarginEnd" />
			</Toolbar>

			<HBox>
					<Label text="{i18nModel>ListDisruption}" class="sapUiMediumMargin"></Label>
			</HBox>
		</content>
	</Dialog>
</core:FragmentDefinition>