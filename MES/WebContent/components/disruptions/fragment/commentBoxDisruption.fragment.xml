<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">
	<Dialog contentHeight="30%" contentWidth="60%" id="disruptionCommentDialogue">
		<content>
			<f:SimpleForm id="rejectDisruption" backgroundDesign="Transparent"
				maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="1" labelSpanM="2" labelSpanS="2" columnsL="1" columnsM="1"
				class="sapUiMediumMarginTop">
				<f:content>
					<Label text="{i18nModel>comment}" />
					<TextArea id="disruptionCommentBox" placeholder="{i18nModel>AddCommentBox}" />
					<core:InvisibleText id="commentDisruption-msgRef"/>
				</f:content>
			</f:SimpleForm>
		</content>

		<buttons>
			<Button text="{i18nModel>ok}" id="disruptionCommentOK" press="" type="Accept" />
			<Button text="{i18nModel>cancel}" press="onCancelDisruptionComment" />
		</buttons>

	</Dialog>
</core:FragmentDefinition>