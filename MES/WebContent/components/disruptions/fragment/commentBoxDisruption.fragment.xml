<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout">
	<Dialog contentHeight="30%" contentWidth="60%"	id="disruptionCommentDialogue">
		<content>
			<VBox alignItems="Center" width="100%">
				<TextArea id="disruptionCommentBox" placeholder="{i18nModel>AddCommentBox}"
					rows="10" cols="50" />
			</VBox>
			<core:InvisibleText id="disruptionComment-msgRef" text="" />

		</content>

		<buttons>
			<Button text="{i18nModel>ok}" id="disruptionCommentOK" press="" type="Accept" />
			<Button text="{i18nModel>cancel}" press="onCloseDisruptionComment" />
		</buttons>

	</Dialog>
</core:FragmentDefinition>
