<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    <Dialog id="disruptionCommentDialogue">
        <content>

            <VBox alignItems="Center" width="100%">

                <TextArea id="disruptionCommentBox" placeholder="{i18nModel>AddComment}"
                    rows="10" cols="50" />
            </VBox>

            <core:InvisibleText id="disruptionCommentMsgRef" text="" />
            <core:InvisibleText id="disruptionCommentSpath" text="" />
            <core:InvisibleText id="disruptionCommentStatus" text="" />

        </content>

        <buttons>
            <Button text="{i18nModel>ok}" id="disruptionCommentOK" press="" type="Transparent" />
            <Button text="{i18nModel>cancel}" press="onCloseDisruptionComment" />
        </buttons>

    </Dialog>
</core:FragmentDefinition>
