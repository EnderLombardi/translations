<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">

	<f:SimpleForm id="S" layout="ResponsiveGridLayout">
		<f:content>
			<core:Title text="" />
			<Label text="" />

			<Button text="{i18nModel>acknowledge}" type="Accept" width="70%"
				visible="{parts: [ {path: 'DisruptionDetailModel>/ResponsibleFlag'}, {path: 'DisruptionDetailModel>/Status'} ], formatter: 'airbus.mes.disruptions.Formatter.setAcknowledgeButtonVisibility'}"
				press="onAckDisruption" design="Transparent" class="btnRadius"  >
				<layoutData>
					<l:GridData span="L12 M12 S12" />
				</layoutData>
			</Button>

			<Button id="rejectDisruption" text="{i18nModel>reject}" type="Reject" width="70%"
				visible="{parts: [ {path: 'DisruptionDetailModel>/ResponsibleFlag'}, {path: 'DisruptionDetailModel>/Status'} ], formatter: 'airbus.mes.disruptions.Formatter.setRejectButtonVisibility'}"
				press="onRejectDisruption" design="Transparent" class="btnRadius"  enabled="{Profile>/identifiedUser/permissions/DISRUPTION_DIS_DETAIL_UPDATE}">
				<layoutData>
					<l:GridData span="L12 M12 S12" />
				</layoutData>
			</Button>

	
			<Button text="{i18nModel>markSolved}" type="Accept" width="70%"
				visible="{parts: [ {path: 'DisruptionDetailModel>/ResponsibleFlag'}, {path: 'DisruptionDetailModel>/Status'} ], formatter: 'airbus.mes.disruptions.Formatter.setMarkSolvedButtonVisibility'}"
				press="onMarkSolvedDisruption" design="Transparent" class="btnRadius"  enabled="{Profile>/identifiedUser/permissions/DISRUPTION_DIS_DETAIL_UPDATE}">
				<layoutData>
					<l:GridData span="L12 M12 S12" />
				</layoutData>
			</Button>

			<Button text="{i18nModel>refuse}" type="Reject" width="70%"
				visible="{parts: 
				[ {path: 'DisruptionDetailModel>/OriginatorFlag'}, {path: 'DisruptionDetailModel>/Status'} ], formatter: 'airbus.mes.disruptions.Formatter.setRefuseButtonVisibility'}"
				press="onRefuseDisruption" design="Transparent" class="btnRadius"  enabled="{Profile>/identifiedUser/permissions/DISRUPTION_DIS_DETAIL_UPDATE}">
				<layoutData>
					<l:GridData span="L12 M12 S12" />
				</layoutData>
			</Button>


			<!-- <Button text="{i18nModel>edit}" type="Emphasized" press="onEditDisruption" width="70%"
				class="btnRadius" enabled="{Profile>/identifiedUser/permissions/DISRUPTION_DIS_DETAIL_EDIT}">
				<layoutData>
					<l:GridData span="L12 M12 S12" />
				</layoutData>
			</Button> -->
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition> 