<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">

	<f:SimpleForm id="S" layout="ResponsiveGridLayout">
		<f:content>
			<core:Title text="" />
			<Label text="" />

			<Button text="{i18nModel>acknowledge}" type="Accept"
				visible="{parts: [ {path: 'operationDisruptionsModel>OriginatorFlag'}, {path: 'operationDisruptionsModel>ResponsibleFlag'}, {path: 'operationDisruptionsModel>Status'} ], formatter: 'airbus.mes.disruptions.Formatter.setAcknowledgeButtonVisibility'}"
				press="onAckDisruption" design="Transparent" class="btnRadius">
				<layoutData>
					<l:GridData span="L12 
				M12 S12" />
				</layoutData>
			</Button>

			<Button id="rejectDisruption" text="{i18nModel>reject}" type="Reject"
				visible="{parts: [ {path: 'operationDisruptionsModel>OriginatorFlag'}, {path: 'operationDisruptionsModel>ResponsibleFlag'}, {path: 'operationDisruptionsModel>Status'} ], formatter: 'airbus.mes.disruptions.Formatter.setRejectButtonVisibility'}"
				press="onRejectDisruption" design="Transparent" class="btnRadius">
				<layoutData>
					<l:GridData span="L12 
				M12 S12" />
				</layoutData>
			</Button>

			<Button id="escalateBtn" text="{i18nModel>escalate}" type="Reject"
				visible="{parts: [ {path: 'operationDisruptionsModel>OriginatorFlag'}, {path: 'operationDisruptionsModel>EscalationLevel'}, {path: 'operationDisruptionsModel>Status'} ], formatter: 'airbus.mes.disruptions.Formatter.setEscalateButtonVisibility'}"
				press="onEscalateDisruption" design="Transparent" class="btnRadius">
				<layoutData>
					<l:GridData span="L12 
				M12 S12" />
				</layoutData>
			</Button>

			<Button text="{i18nModel>markSolved}" type="Accept"
				visible="{parts: [ {path: 'operationDisruptionsModel>OriginatorFlag'}, {path: 'operationDisruptionsModel>ResponsibleFlag'}, {path: 'operationDisruptionsModel>Status'} ], formatter: 'airbus.mes.disruptions.Formatter.setMarkSolvedButtonVisibility'}"
				press="onMarkSolvedDisruption" design="Transparent" class="btnRadius">
				<layoutData>
					<l:GridData span="L12 
				M12 S12" />
				</layoutData>
			</Button>

			<Button text="{i18nModel>refuse}" type="Reject"
				visible="{parts: 
				[ {path: 'operationDisruptionsModel>OriginatorFlag'}, {path: 'operationDisruptionsModel>ResponsibleFlag'}, 
				{path: 'operationDisruptionsModel>Status'} ], formatter: 'airbus.mes.disruptions.Formatter.setRefuseButtonVisibility'}"
				press="onRefuseDisruption" design="Transparent" class="btnRadius">
				<layoutData>
					<l:GridData span="L12 
				M12 S12" />
				</layoutData>
			</Button>


			<Button text="{i18nModel>edit}" type="Emphasized" press="onEditDisruption"
				class="btnRadius">
				<layoutData>
					<l:GridData span="L12 
				M12 S12" />
				</layoutData>
			</Button>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition> 