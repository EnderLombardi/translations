<core:FragmentDefinition xmlns:core="sap.ui.core"
	xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog draggable="true" contentHeight="40%" contentWidth="60%"
		title="{i18nModel>CloseDisruption}">
		<content>
			<f:SimpleForm id="reasonCode" backgroundDesign="Transparent" class="sapUiLargeMarginTop">
				<f:content>
					<Label text="Reason Code" />
					<Select forceSelection="true" change="onSelectionReason" id="reasonCodeSelectBox"
						items="{reasonCodeModel>/Rowsets/Rowset/0/Row}">
						<core:Item key="{reasonCodeModel>REASON_CODE}" text="{reasonCodeModel>DESCRIPTION}" />
					</Select>
					<Label text="Comment" />
					<TextArea id="reasonCodeComments" />
				</f:content>
			</f:SimpleForm>
		</content>
		<buttons>
			<Button text="{i18nModel>ok}" press="onCancelConfirmation"
				type="Accept" />
			<Button text="{i18nModel>cancel}" press="closeCancelDisruptFragment" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>