<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	controllerName="airbus.mes.disruptions.ViewDisruption" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page enableScrolling="false" showHeader="false">
		<content>
				<List noDataText="{disruptionsI18n>noDisruptions}" class="disruptionDetail sapUiSmallMarginBottom"
					items="{path: 'DisruptionDetail>/Disruption'}">

					<CustomListItem>

						<Panel expandable="true" expanded="false" class="expandableIcon"
							expand="handleDisruptionPanelExpand">
							<headerToolbar>
								<Toolbar>
									<Title text="{DisruptionDetail>Title}" class="panelTitleText" />
									<ToolbarSpacer />
									<Button class="decoratePanelBtn" text="Edit" design="Transparent"
										icon="sap-icon://edit" />
									<Button class="decoratePanelBtn" text="Delete" design="Transparent"
										icon="sap-icon://delete" />

								</Toolbar>
							</headerToolbar>

									<f:Form class="formDisruptionDetail" editable="true">
										<f:layout>
											<f:ResponsiveGridLayout span="L12 M12 S12" />
										</f:layout>
										<f:formContainers>
											<f:FormContainer ariaLabelledBy="Title2">
												<f:formElements>

													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="{disruptionsI18n>gravity}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

															<Text text="{DisruptionDetail>Gravity}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>


													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="{disruptionsI18n>problem}">
																<layoutData>
																	<l:GridData span="L2 M2 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

															<Text text="{DisruptionDetail>Object}">
																<layoutData>
																	<l:GridData span="L4 M4 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>

													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="{disruptionsI18n>resGroup}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

															<Text text="{DisruptionDetail>Help}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>


													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="{disruptionsI18n>nature}">
																<layoutData>
																	<l:GridData span="L2 M2 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

															<Text text="{DisruptionDetail>Nature}">
																<layoutData>
																	<l:GridData span="L4 M4 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>

													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="{disruptionsI18n>date}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

															<Text text="{DisruptionDetail>Open Date} - {DisruptionDetail>Time}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>



													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="{disruptionsI18n>expected}">
																<layoutData>
																	<l:GridData span="L2 M2 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>
															<Text text="{DisruptionDetail>Expected} - {DisruptionDetail>TimeEx}">
																<layoutData>
																	<l:GridData span="L4 M4 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>


													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="{disruptionsI18n>status}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>
															<Text text="{DisruptionDetail>Status}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>

												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>

									<Panel id="showCommentBox">

										<VBox width="79%">
											<TextArea placeholder="Add Comments..." width="100%" />

											<HBox class="submitComment">
												<Button text="{disruptionsI18n>submitComment}" press="showCommentBox"
													class="sapUiSmallMarginEnd" width="12rem" />
												<Button text="{disruptionsI18n>statusButton}" type="Emphasized" press="onMarkSolved"
													width="12rem" />
											</HBox>
										</VBox>

									</Panel>

									<Toolbar class="barcolor">
										<ToolbarSpacer />
										<Button class="decoratePanelBtn" text="{disruptionsI18n>addComment}"
											design="Transparent" icon="sap-icon://comment" />
										<Button class="decoratePanelBtn" text="{disruptionsI18n>acknowledge}"
											design="Transparent" icon="sap-icon://to-be-reviewed" />
										<Button class="decoratePanelBtn" text="{disruptionsI18n>escalate}"
											design="Transparent" icon="sap-icon://message-warning" />
										<Button class="decoratePanelBtn" text="{disruptionsI18n>markSolved}"
											design="Transparent" icon="sap-icon://sys-add" />
									</Toolbar>
						</Panel>

					</CustomListItem>

				</List>
		</content>
		<footer>
		<Bar design="Footer" class="viewDisruptionFooter">
			<contentLeft>
				<Button text="{i18n>reportDisruption}" press="onReportDisruption" icon="sap-icon://add"/>
			</contentLeft>
		</Bar>
	</footer>
	
	</Page>
</core:View>
