	<Page enableScrolling="false" showHeader="false">
		<content>
			<ScrollContainer class="disruptionDetailCont"
				vertical="true" height="43rem">
				<List noDataText="No Disruptions Found" class="disruptionDetail"
					items="{path: 'DisruptionDetail>/Disruption'}">

					<CustomListItem>

						<Panel expandable="true" expanded="false" class="expandableIcon disruptionPanel sapUiSmallMargin" id="disruptionsHeader"
