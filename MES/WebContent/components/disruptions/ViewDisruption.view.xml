							<headerToolbar>
								<Toolbar>
									<Title text="{DisruptionDetail>Title}" class="panelTitleText" />
									<ToolbarSpacer />
									<Button class="decoratePanelBtn" text="Edit" design="Transparent"
										icon="sap-icon://edit" />
									<Button class="decoratePanelBtn" text="Delete" design="Transparent"
										icon="sap-icon://delete" />

								</Toolbar>
							</headerToolbar>

									<f:Form class="formDisruptionDetail" editable="true">
										<f:layout>
											<f:ResponsiveGridLayout span="L12 M12 S12" />
										</f:layout>
										<f:formContainers>
											<f:FormContainer ariaLabelledBy="Title2">
												<f:formElements>

													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="Gravity">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

															<Text text="{DisruptionDetail>Gravity}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>


													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="Problem">
																<layoutData>
																	<l:GridData span="L2 M2 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

															<Text text="{DisruptionDetail>Object}">
																<layoutData>
																	<l:GridData span="L4 M4 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>

													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="Resolution group">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

