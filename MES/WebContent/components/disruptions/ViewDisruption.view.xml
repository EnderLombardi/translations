																	<l:GridData span="L2 M2 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

															<Text text="{DisruptionDetail>Nature}">
																<layoutData>
																	<l:GridData span="L4 M4 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>

													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="Date">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>

															<Text text="{DisruptionDetail>Open Date} - {DisruptionDetail>Time}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>



													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="Expected">
																<layoutData>
																	<l:GridData span="L2 M2 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>
															<Text text="{DisruptionDetail>Expected} - {DisruptionDetail>TimeEx}">
																<layoutData>
																	<l:GridData span="L4 M4 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>


													<f:FormElement>
														<f:label>
															<Label class="detailLabels" text="Status">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Label>
														</f:label>
														<f:fields>
															<Text text="{DisruptionDetail>Status}">
																<layoutData>
																	<l:GridData span="L3 M3 S12" />
																</layoutData>
															</Text>
														</f:fields>
													</f:FormElement>

												</f:formElements>
											</f:FormContainer>
										</f:formContainers>
									</f:Form>

									<Panel id="showCommentBox">

										<VBox width="79%">
											<TextArea placeholder="Add Comments..." width="100%" />

											<HBox class="submitComment">
												<Button text="Submit Comment" press="showCommentBox"
													class="sapUiSmallMarginEnd" width="12rem" />
												<Button text="Status" type="Emphasized" press="onMarkSolved"
													width="12rem" />
											</HBox>
										</VBox>

									</Panel>

									<Toolbar class="barcolor">
										<ToolbarSpacer />
										<Button class="decoratePanelBtn" text="Add Comment"
											design="Transparent" icon="sap-icon://comment" />
										<Button class="decoratePanelBtn" text="Acknowledge"
											design="Transparent" icon="sap-icon://to-be-reviewed" />
										<Button class="decoratePanelBtn" text="Escalate"
											design="Transparent" icon="sap-icon://message-warning" />
										<Button class="decoratePanelBtn" text="Mark Solved"
											design="Transparent" icon="sap-icon://sys-add" />
									</Toolbar>
						</Panel>

					</CustomListItem>

				</List>
			</ScrollContainer>
		</content>
		<footer>
		<Bar design="Footer" class="viewDisruptionFooter">
			<contentLeft>
				<Button text="{i18n>reportDisruption}" press="onReportDisruption" icon="sap-icon://add"/>
			</contentLeft>
		</Bar>
	</footer>
