<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="airbus.mes.disruptions.CreateDisruption"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">

	<Page enableScrolling="false" showHeader="false" height="100%">
			<FlexBox width="100%" height="100%" justifyContent="Center"
				direction="Column">
				<items>
		<f:Form id="createDisruptionForm" editable="true" class="sapUiMediumMargin"
			visible="true">
			<f:layout>
				<f:ResponsiveGridLayout span="L12 M12 S12" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer>
					<f:formElements>

						<f:FormElement>

							<Title text=" " titleStyle="H3">
								<layoutData>
									<l:GridData span="L12 M12 S12" />
								</layoutData>
							</Title>


						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Category">
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="category" selectedKey="Assembly">
									<items>
										<core:Item text="Assembly" key="Assembly" />
										<core:Item text="Part" key="Part" />
										<core:Item text="Jig-Tool" key="JigTool" />
									</items>
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</Select>
							</f:fields>
						</f:FormElement>
						
						<f:FormElement>
							<f:label>
								<Label text="Category Class">
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="categoryClass" selectedKey="">
									<items>
										
									</items>
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</Select>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Gravity">
									<layoutData>
										<l:GridData span="L3 M6 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="gravity" selectedKey="Blocked">
									<items>
										<core:Item text="Blocked" key="1" />
										<core:Item text="Blocked" key="2" />
										<core:Item text="Blocked" key="3" />
									</items>
									<layoutData>
										<l:GridData span="L3 M6 S6" />
									</layoutData>

								</Select>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Reason Tree">
									<layoutData>
										<l:GridData span="L3 M6 S12"/>
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="reasonTree" selectedKey="Non Confirm">
									<items>
										<core:Item text="Non Confirm" key="NonConfirm" />
										<core:Item text="Missing" key="Missing" />
										<core:Item text="Failure" key="Failure" />
									</items>
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>

								</Select>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Responsible Support">
									<layoutData>
										<l:GridData span="L3 M6 S12" linebreak="true"/>
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="responsibleSupport" selectedKey="Logistic Support">
									<items>
										<core:Item text="Team Leader" key="TeamLeader" />
										<core:Item text="Logistic Support" key="LogisticSupport" />
										<core:Item text="Quality Support" key="QualitySupport" />
									</items>
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</Select>
							</f:fields>
						</f:FormElement>
						
							<f:FormElement>
							<f:label>
								<Label text="SQCDP KPI">
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="kpi" selectedKey="Safety">
									<items>
										<core:Item text="Safety" key="Safety" />
										<core:Item text="Quality" key="Quality" />
										<core:Item text="Cost" key="Cost" />
									</items>
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</Select>
							</f:fields>
						</f:FormElement>
						
							<f:FormElement>
							<f:label>
								<Label text="Root Cause">
									<layoutData>
										<l:GridData span="L3 M3 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="rootCause" selectedKey="">
									<layoutData>
										<l:GridData span="L9 M9 S12" />
									</layoutData>
								</Select>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Open Date">
									<layoutData>
										<l:GridData span="L3 M6 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<DatePicker id="openDate" 
									displayFormat="long" change="handleChange">
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</DatePicker>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Expected">
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<DatePicker id="expectedDate" valueFormat="yy/MM/dd"
									displayFormat="long" change="handleChange">
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</DatePicker>
							</f:fields>
						</f:FormElement>

						<f:FormElement label="Time">
						<f:label>
								<Label text="Time">
									<layoutData>
										<l:GridData span="L3 M6 S12" linebreak="true"/>
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<TimePicker id="openTime">
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</TimePicker>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
						<f:label>
								<Label text="Time">
									<layoutData>
										<l:GridData span="L3 M6 S12"/>
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<TimePicker id="expectedTime">
									<layoutData>
										<l:GridData span="L3 M6 S12" />
									</layoutData>
								</TimePicker>
							</f:fields>
						</f:FormElement>
						
						<f:FormElement>
						<f:label>
								<Label text="Time Lost">
									<layoutData>
										<l:GridData span="L3 M6 S12" linebreak="true"/>
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Input placeholder="minutes" id="timeLost" type="Number"/>
								<layoutData>
										<l:GridData span="L3 M6 S12"/>
									</layoutData>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
						<f:label>
								<Label text=" ">
									<layoutData>
										<l:GridData span="L2 M2 S12" linebreak="true"/>
									</layoutData>
								</Label>
							</f:label>
							<TextArea placeholder="Add comment.." id="comment"
								valueLiveUpdate="true">
								<layoutData>
									<l:GridData span="L10 M10 S12" />
								</layoutData>
							</TextArea>
						</f:FormElement>

					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		</items>
		</FlexBox>
		<footer>
			<Bar design="" class="createDisruptionFooter">
				<contentRight>
					<Button text="Cancel" press="onCancelCreateDisruption" />
					<Button text="Create" class="btnColor" press="onCreateDisrupution" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</core:View>
