<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="airbus.mes.disruptions.CreateDisruption"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml">

	<Page enableScrolling="false" showHeader="false" height="100%">
		 <f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1"
			class="sapUiSmallMargin" visible="true">
			<f:layout>
				<f:ResponsiveGridLayout span="L12 M12 S12" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer ariaLabelledBy="Title2">
					<f:formElements>

						<f:FormElement>

							<Title text=" Create Disruptions" titleStyle="H4">
								<layoutData>
									<l:GridData span="L3 M6 S12" linebreak="true" />
								</layoutData>
							</Title>


						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Object">
									<layoutData>
										<l:GridData span="L2 M6 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="Object" selectedKey="Assembly">
									<items>
										<core:Item text="Assembly" key="Assembly" />
										<core:Item text="Assembly" key="Assembly" />
										<core:Item text="Assembly" key="Assembly" />
									</items>
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>
								</Select>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Gravity">
									<layoutData>
										<l:GridData span="L2 M6 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="Gravity" selectedKey="Blocked">
									<items>
										<core:Item text="Blocked" key="blocked" />
										<core:Item text="Blocked" key="blocked" />
										<core:Item text="Blocked" key="blocked" />
									</items>
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>

								</Select>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Nature">
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="Nature" selectedKey="Non Confirm">
									<items>
										<core:Item text="Non Confirm" key="Confirm" />
										<core:Item text="Confirm" key="Confirm" />
										<core:Item text="Confirm" key="Confirm" />
									</items>
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>

								</Select>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="ResoLution Group">
									<layoutData>
										<l:GridData span="L2 M6 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Select id="ResolveGroup" selectedKey="Logistic Support">
									<items>
										<core:Item text="Logistic Support" key="Logistic Support" />
										<core:Item text="Support" key="Support" />
										<core:Item text="Support" key="Support" />
									</items>
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>
								</Select>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Open Date">
									<layoutData>
										<l:GridData span="L2 M6 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<DatePicker id="opendate" valueFormat="yyyy-MM-dd"
									displayFormat="long" change="handleChange">
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>
								</DatePicker>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Expected">
									<layoutData>
										<l:GridData span="L2 M6 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<DatePicker id="expected" valueFormat="yyyy-MM-dd"
									displayFormat="long" change="handleChange">
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>
								</DatePicker>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Time">
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<TimePicker id="timeOpen">
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>
								</TimePicker>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="Time">
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<TimePicker id="timeExpected">
									<layoutData>
										<l:GridData span="L2 M6 S12" />
									</layoutData>
								</TimePicker>
							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="">
									<layoutData>
										<l:GridData span="L7 M7 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<HBox class="iconTextBox">
								<core:Icon src="sap-icon://attachment" width="1rem" class="sapUiSmallMarginEnd"/>
								<core:Icon src="sap-icon://camera" width="1rem" />
								</HBox>

							</f:fields>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="">
									<layoutData>
										<l:GridData span="L2 M6 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<TextArea placeholder="Add comment.." icon="sap-icon://sort"
								id="addMessage" valueLiveUpdate="true">
								<layoutData>
									<l:GridData span="L6 M6 S12" />
								</layoutData>
							</TextArea>
						</f:FormElement>

						<f:FormElement>
							<f:label>
								<Label text="">
									<layoutData>
										<l:GridData span="L4 M6 S12" linebreak="true" />
									</layoutData>
								</Label>
							</f:label>
							<f:fields>
								<Button text="Cancel" press="onCancelCreateDisruption">
									<layoutData>
										<l:GridData span="L2 M2 S12" />
									</layoutData>
								</Button>
								<Button text="Create" class="btnColor" press="onCreateDisrupt">
									<layoutData>
										<l:GridData span="L2 M2 S12" />
									</layoutData>
								</Button>
							</f:fields>
						</f:FormElement>

					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form> 

	</Page>
</core:View>
