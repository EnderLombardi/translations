		<content>
			<FlexBox height="100%" width="100%">

				<VBox height="100%" width="100%">
					<Bar class="titleToolbar">
						
						<contentLeft>
							<Button id="navBack" icon="sap-icon://arrow-left" text="{i18nModel>back}"
								press="onNavBack"  />
						</contentLeft>
						<contentMiddle>
							<Text text="operation20-work order10004567-924er Halter C-Brackets incl. Massen " class="textSize" />
						</contentMiddle>
					</Bar>

					<HBox width="100%" height="100%">
						<core:Fragment fragmentName="airbus.mes.disruptions.fragment.disruptionSummary"
							type="XML">
						</core:Fragment>

						<core:Fragment fragmentName="airbus.mes.disruptions.fragment.disruptionData"
							type="XML">
						</core:Fragment>


						<core:Fragment fragmentName="airbus.mes.disruptions.fragment.actionButtons"
							type="XML">
						</core:Fragment>
					</HBox>



				</VBox>

			</FlexBox>
		</content>
	</Page>
</core:View>
