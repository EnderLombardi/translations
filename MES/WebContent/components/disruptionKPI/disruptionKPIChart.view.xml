<core:View controllerName="airbus.mes.disruptionKPI.disruptionKPIChart"
	xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:viz="sap.viz.ui5.controls"
	xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:vtypes="sap.viz.ui5.types"
	xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:vdata="sap.viz.ui5.data"
	xmlns:viz.data="sap.viz.ui5.data">
	<Page showHeader="false" id="page">
		<layout:Grid id="grid_layout" width="100%" height="100%"
			defaultSpan="L6 M6 S12" vSpacing="0" hSpacing="0">
		<HBox>
			<layout:FixFlex minFlexSize="100%">
				<layout:flexContent id="chartContainer">
				<HBox>
					<viz:VizFrame id="vizFrame" height="400px" width="50%"
						uiConfig="{applicationSet:'fiori'}" legendVisible="false">
						<viz:dataset>
							<viz.data:FlattenedDataset xmlns="sap.viz.ui5.data"
								data="{/TimeLostperCategory/businessData}">
								<viz.data:dimensions>
									<viz.data:DimensionDefinition axis="1" name="Category"
										value="{Category}" />
								</viz.data:dimensions>
								<viz.data:measures>
									<viz.data:MeasureDefinition name="Time Lost" value="{Time Lost}" />
								</viz.data:measures>
							</viz.data:FlattenedDataset>
						</viz:dataset>
					</viz:VizFrame>
					<viz:VizFrame id="vizFrame2" height="400px" width="50%"
						uiConfig="{applicationSet:'fiori'}" legendVisible="false">
						<viz:dataset>
							<viz.data:FlattenedDataset xmlns="sap.viz.ui5.data"
								data="{/TimeLostperReason/businessData1}">
								<viz.data:dimensions>
									<viz.data:DimensionDefinition axis="1" name="Reason"
										value="{Reason}" />
								</viz.data:dimensions>
								<viz.data:measures>
									<viz.data:MeasureDefinition name="Time Lost" value="{Time Lost}" />
								</viz.data:measures>
							</viz.data:FlattenedDataset>
						</viz:dataset>
					</viz:VizFrame>
				</HBox>
					<viz:VizFrame id="vizFrame3" height="400px" width="50%" vizType="bar"
						uiConfig="{applicationSet:'fiori'}" legendVisible="false">
						<viz:dataset>
							<viz.data:FlattenedDataset xmlns="sap.viz.ui5.data"
								data="{/TimeLostperOperation/LostTimeperOperation}">
								<viz.data:dimensions>
									<viz.data:DimensionDefinition axis="1" name="Operation"
										value="{Operation}" />
								</viz.data:dimensions>
								<viz.data:measures>
									<viz.data:MeasureDefinition name="Time Lost" value="{Time Lost}" />
								</viz.data:measures>
							</viz.data:FlattenedDataset>
						</viz:dataset>
					</viz:VizFrame>
					
					<viz:VizFrame id="vizFrame4" height="400px" width="50%" vizType="bar"
						uiConfig="{applicationSet:'fiori'}" legendVisible="false">
						<viz:dataset>
							<viz.data:FlattenedDataset xmlns="sap.viz.ui5.data"
								data="{/TimeLostperMSN/LostTimeperMSN}">
								<viz.data:dimensions>
									<viz.data:DimensionDefinition axis="1" name="MSN"
										value="{MSN}" />
								</viz.data:dimensions>
								<viz.data:measures>
									<viz.data:MeasureDefinition name="Time Lost" value="{Time Lost}" />
								</viz.data:measures>
							</viz.data:FlattenedDataset>
						</viz:dataset>
					</viz:VizFrame>

				</layout:flexContent>
			</layout:FixFlex>			
			<layout:FixFlex minFlexSize="100%">
<!-- 				<layout:flexContent id="chartContainer4">					 -->
<!-- 				</layout:flexContent> -->
			</layout:FixFlex>
		</HBox>
		</layout:Grid>
	</Page>
</core:View>