<core:View xmlns:core="sap.ui.core" xmlns="sap.m"
	xmlns:suite="sap.suite.ui.commons" controllerName="airbus.mes.stationtracker.stationtracker"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:custom="airbus.mes.stationtracker"
	xmlns:layout="sap.ui.layout">
	<Page title="Station Tracker" height="100%" showHeader="false"
		enableScrolling="false ">
		<customHeader>
			<Toolbar class="pageHeader" >
				<content>
					<Image src="../images/Airbus.png" width="10rem" height="2rem" />
					<ToolbarSeparator />
					<Label text="MES" class="pageTitle" />
					<ToolbarSpacer />
					<core:Icon src="sap-icon://customer" />
					<Label text="Welcome" class="pageWelcome" />
					<Label text="Username" design="Bold" class="pageUsername" />
					<ToolbarSeparator />
					<Button text="Logout" type="Transparent" icon="sap-icon://log"
						class="whiteColor whiteButton"></Button>
					<ToolbarSeparator />
					<Select class="sapUiTinyMarginBeginEnd pageHeader pageHeaderBlue">
						<core:Item text="English" />
						<core:Item text="Deutsch" />
						<core:Item text="French" />						
						<core:Item text="Spanish" />
					</Select>
					<ToolbarSeparator />
					<Button type="Transparent" icon="sap-icon://action-settings"
						class="whiteColor whiteButton"></Button>
				</content>
			</Toolbar>
		</customHeader>
		<content width="100%" height="100%">
			<Panel expandable="true" expanded="true"
				class="pageHeader sapUiSmallMarginTop contentNoPad">
				<headerToolbar>
					<Toolbar>
						<Label text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/station', formatter : 'airbus.mes.stationtracker.util.Formatter.stationTrackerStation' }" class="pageTitle sapUiTinyMarginBeginEnd" />
 						<Label text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/msn', formatter : 'airbus.mes.stationtracker.util.Formatter.stationTrackerMsn' }" class="pageWelcome sapUiTinyMarginBeginEnd" /> 
						<Label text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/plant', formatter : 'airbus.mes.stationtracker.util.Formatter.stationTrackerPlant' }" class="pageWelcome sapUiTinyMarginBeginEnd" />
						<Label text="{ path : 'userSettingModel>/Rowsets/Rowset/0/Row/0/line', formatter : 'airbus.mes.stationtracker.util.Formatter.stationTrackerLine' }" class="pageWelcome sapUiTinyMarginBeginEnd" />					
					<ToolbarSeparator/>
					<Label text="Production Group" class="sapUiTinyMarginBeginEnd pageHeader pageHeaderBlue" />
 					<MultiComboBox id="selectProductionGroup" class="sapUiTinyMarginBeginEnd comboBoxStyle pageHeader pageHeaderBlue" selectionFinish="onProdGroupSelFinish" items="{ path : 'productionGroupModel>/Rowsets/Rowset/0/Row' }" width="10%">
						<core:Item key="{productionGroupModel>PROD_GROUP}" text="{productionGroupModel>PROD_GROUP}" />
					</MultiComboBox> 	
					</Toolbar>
				</headerToolbar>
				<content>
					<suite:HeaderContainer showDividers="false" backgroundDesign="Solid">
						<suite:items>
							<suite:HeaderCell class="contentHeaderCont">
								<suite:north class="centerItems">
									<suite:HeaderCellItem class="centerItems">
										<suite:content class="centerItems">
											<Label text="TAKT ADHERENCE" design="Bold" class="whiteText centerItems"/>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:north>
								<suite:south>
									<suite:HeaderCellItem>
										<suite:content>
											<HBox alignItems="Baseline">
												<VBox alignItems="Stretch">
													<Label text="Planned" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/TaktAdherence/Planned}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
												<VBox alignItems="Stretch">
													<Label text="Real" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/TaktAdherence/Real}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
												<VBox alignItems="Stretch">
													<Label text="Remaining time" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/TaktAdherence/RemainingTime}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
											</HBox>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:south>
							</suite:HeaderCell>
							<suite:HeaderCell class="contentHeaderCont">
								<suite:north>
									<suite:HeaderCellItem>
										<suite:content>
											<Label text="PROGRESS STATUS" design="Bold" class="whiteText"/>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:north>
								<suite:south>
									<suite:HeaderCellItem>
										<suite:content>
											<HBox alignItems="Center">
												<VBox alignContent="Center" alignItems="Stretch" class="greenBottom" JustifyContent="Center">
													<Label text="OP Done" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/ProgressStatus/OPDone}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
												<VBox  alignContent="Center" alignItems="Stretch" JustifyContent="Center">
													<Label text="OP Late" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/ProgressStatus/OPLate}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
												<VBox  alignContent="Center" alignItems="Stretch" JustifyContent="Center">
													<Label text="OP Ahead" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/ProgressStatus/OPAhead}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
											</HBox>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:south>
							</suite:HeaderCell>
							<suite:HeaderCell class="contentHeaderCont">
								<suite:north>
									<suite:HeaderCellItem>
										<suite:content>
											<Label text="OPERATION STATUS" design="Bold" class="whiteText"/>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:north>
								<suite:south>
									<suite:HeaderCellItem>
										<suite:content>
											<HBox alignItems="Baseline">
												<VBox alignItems="Stretch" class="greenBottom">
													<Label text="Confirmed" class="sapUiLargeMarginEnd  whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/OperationStatus/Confirmed}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
												<VBox alignItems="Stretch">
													<Label text="Partially Conf." class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/OperationStatus/PartialConf}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
											</HBox>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:south>
							</suite:HeaderCell>
							<suite:HeaderCell class="contentHeaderCont">
								<suite:north>
									<suite:HeaderCellItem>
										<suite:content>
											<Label text="DISRUPTIONS" design="Bold" class="whiteText"/>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:north>
								<suite:south>
									<suite:HeaderCellItem>
										<suite:content>
											<HBox alignItems="Baseline">
												<VBox alignItems="Stretch" class="redBottom">
													<Label text="Other" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/Disruption/Other}" design="Bold" class="sapUiSmallMarginTop kpiValue whiteText " />
												</VBox>
												<VBox alignItems="Stretch" class="redBottom">
													<Label text="NC" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/Disruption/NC}" design="Bold" class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
												<VBox alignItems="Stretch" class="redBottom">
													<Label text="Missing part" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/Disruption/MissingPart}" design="Bold" class="sapUiSmallMarginTop kpiValue whiteText" />
											</VBox>
											</HBox>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:south>
							</suite:HeaderCell>
							<suite:HeaderCell class="contentHeaderCont">
								<suite:north >
									<suite:HeaderCellItem  >
										<suite:content  >
											<Label text="DISRUPTIONS STATUS" design="Bold" class="whiteText"/>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:north>
								<suite:south>
									<suite:HeaderCellItem>
										<suite:content>
											<HBox alignItems="Baseline">
												<VBox alignItems="Stretch" class="greenBottom">
													<Label text="Closed" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/DisruptionStatus/Closed}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
												<VBox alignItems="Stretch" class="redBottom">
													<Label text="Opened" class="sapUiLargeMarginEnd whiteText" />
													<Label text="{KPI>/Rowsets/Rowset/0/Row/DisruptionStatus/Opened}" design="Bold"
														class="sapUiSmallMarginTop kpiValue whiteText" />
												</VBox>
											</HBox>
										</suite:content>
									</suite:HeaderCellItem>
								</suite:south>
							</suite:HeaderCell>
						</suite:items>
					</suite:HeaderContainer>
				</content>
			</Panel>


			<Toolbar class="white">
				<content>
					<Button text="Your Team" type="Transparent" icon="sap-icon://group"
						class="buttonStatus2 iconbuttonTeam sapUiSmallMarginBegin" press="onTeamPress"></Button>
					<ToolbarSeparator />
					<Label text="Sort By : " />
					<Select id="selectGroup" class="sapUiTinyMarginBeginEnd comboBoxStyle" change="changeGroup">
						<core:Item text="Competence" key="CPP_CLUSTER"/>
						<core:Item text="Avl" key="avlLine" />
					</Select>
					<Label text="Show : " />
					<Select id="selectBox" class="sapUiTinyMarginBeginEnd comboBoxStyle" change="changeBox">
						<core:Item text="Operations" key="OPERATION_ID"/>
						<core:Item text="WorkOrder" key="WORKORDER_ID"/>
					</Select>
					<Label text="Shift : "  visible= "{ path : 'stationTrackerShift>/0/visible', formatter : 'airbus.mes.stationtracker.util.Formatter.isDayTimeline' }" />
					<Select id="selectShift" class="sapUiTinyMarginBeginEnd comboBoxStyle selectShift" change="changeShift" items="{ path : 'stationTrackerShift>/' }" visible= "{ path : 'stationTrackerShift>/0/visible', formatter : 'airbus.mes.stationtracker.util.Formatter.isDayTimeline' }" >
						<core:Item key="{stationTrackerShift>id}" text="{stationTrackerShift>value}" />
					</Select>
					<ToolbarSpacer />
					<HBox id="toolbarDate" class="sapUiTinyMarginBeginEnd"></HBox>
					<ToolbarSpacer />
					<Button text="OutStanding Work" type="Transparent" icon="sap-icon://inspect"
						class="sapUiTinyMarginBeginEnd" press="onOSWPress"></Button>
 					<Button text="Unplanned activities" type="Transparent" icon="sap-icon://inspect"
						class="sapUiTinyMarginBeginEnd" press="onUnplannedPress"></Button>
					<Button text="show CP" type="Transparent" icon="sap-icon://ppt-attachment"
						class="sapUiTinyMarginBeginEnd" press="onCPPress"></Button>
					<Button text="show initial plan" type="Transparent"
						icon="sap-icon://ppt-attachment" class="sapUiTinyMarginBeginEnd"
						press="onInitialPlanPress"></Button>
					<SegmentedButton>
						<!-- <layout:layoutData> <ObjectPageHeaderLayoutData/> </layout:layoutData> -->
						<items>
							<SegmentedButtonItem text="Shift" press="onShiftPress" />
							<SegmentedButtonItem text="Day" press="onDayPress" />
						</items>
					</SegmentedButton>
				</content>
			</Toolbar>


			<custom:DHTMLXScheduler id="test"></custom:DHTMLXScheduler>

		</content>
	</Page>
</core:View>


