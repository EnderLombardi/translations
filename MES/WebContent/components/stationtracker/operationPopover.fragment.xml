<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Popover id="operationPopoverID" showHeader="false"
		contentWidth="455px" contentHeight="353px" placement="Bottom">
		<NavContainer id="navOperatorContainer">
			<Page id="master">
				<VBox id="SPGeneral" class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop">
					<HBox>
						<Label id="SPGeneralOP" text="{WorkListModel>/0/operationID}"
							design="Bold" class="spTitle" />
					</HBox>
					<HBox class="sapUiSmallMarginTop">
						<Label id="SPGeneralDesc" text="{WorkListModel>/0/operationDescription}"
							class="spTitle" />
					</HBox>
					<HBox class="sapUiSmallMarginTop">
						<HBox width="50%">
							<Label text="Start: " design="Bold" />
							<Label id="SPStart" text="{ path : 'WorkListModel>/0/startDate' , formatter: 'airbus.mes.stationtracker.util.Formatter.date2Hour' }" class="sapUiTinyMarginBeginEnd" />	<!--							<Label id="SPStart" text="{ path : 'WorkListModel>/0/startDate , formatter: 'airbus.mes.stationtracker.util.Formatter.date2Hour' } " class="sapUiTinyMarginBeginEnd" />  -->
							<Label text="End: " design="Bold" />
							<Label id="SPEnd" text="{ path : 'WorkListModel>/0/endDate' , formatter: 'airbus.mes.stationtracker.util.Formatter.date2Hour' }" class="sapUiTinyMarginBeginEnd" />
						</HBox>
						<HBox width="50%" alignContent="End">
							<Label text="Work Center: " design="Bold" />
							<Label id="SPWorkCenter" text="{WorkListModel>/0/shopOrder}" class="sapUiTinyMarginBeginEnd" />
						</HBox>
					</HBox>
					<HBox class="sapUiSmallMarginTop">
						<Label text="Status : " />
						<Label id="SPGeneralStatus" text="{ path : 'WorkListModel>/0/progress' , formatter: 'airbus.mes.stationtracker.util.Formatter.progress2status' }" class="sapUiTinyMarginBeginEnd" />
						<Label id="SPGeneralStatusVal" text="{ path : 'WorkListModel>/0/progress' , formatter: 'airbus.mes.stationtracker.util.Formatter.progress2percent' }" />
					</HBox>
					<Panel expandable="true" expanded="false" width="100%"
						backgroundDesign="Transparent" class="sapUiSmallMarginTopBottom">
						<headerToolbar>
							<Toolbar height="1.2rem">
								<ProgressIndicator id="SPStatusInd"
									percentValue="{ path : 'WorkListModel>/0/progress' , formatter : 'airbus.mes.stationtracker.util.Formatter.progress2float' }" displayValue="{ path : 'WorkListModel>/0/progress' , formatter: 'airbus.mes.stationtracker.util.Formatter.progress2percent' }" showValue="true" state="Success"
									width="100%" class="progressBarOP" />
							</Toolbar>
						</headerToolbar>
						<content>
							<Text text="Lorem ipsum dolor st amet, consetetur sadipscing elitr" />
						</content>
					</Panel>

					<HBox>
						<HBox id="SPOperator" width="50%" alignContent="Start">
							<Label text="LT" class="rond sapUiTinyMarginEnd" textAlign="Center" />
							<Label text="assigned to : " class="sapUiTinyMarginEnd" />
							<Label id="SPOperatorName" text="Luisa T." />
						</HBox>
						<HBox width="50%" justifyContent="End" id="SPIcons">
							<Button id="SPIcon1" icon="sap-icon://wrench" type="Transparent"
								enabled="false"></Button>
							<Button id="SPIcon2" icon="sap-icon://wrench" type="Transparent"
								enabled="false"></Button>
						</HBox>
					</HBox>
				</VBox>
				<Button text="Reschedule" type="Transparent" icon="sap-icon://fob-watch"
					class="sapUiTinyMarginBeginEnd" press="onReschedulePress">
				</Button>
				<Button text="Add Operator" type="Transparent" icon="sap-icon://company-view"
					class="sapUiTinyMarginBeginEnd" press="onAssignOpPress">
				</Button>
				<Button text="Set OSW" type="Transparent" icon="sap-icon://forward"
					class="sapUiTinyMarginBeginEnd" press="onSetOSWPress">
				</Button>
			</Page>
			<Page id="Reschedule" >
				<VBox>
					<Toolbar>
						<content>
							<ToolbarSpacer />
							<Title id="rescheduleTitle" text="{WorkListModel>/0/operationDescription}"
								titleStyle="H5"></Title><!-- 
								binding/value remains -->
							<ToolbarSpacer />
						</content>
					</Toolbar>
					<f:SimpleForm maxContainerCols="1" editable="false"
						layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="4"
						labelSpanS="6" emptySpanL="2" emptySpanM="2" emptySpanS="0"
						columnsL="1" columnsM="1" columnsS="1" class="shrinkArea">
						<f:content class="shrinkArea">
							<Label class="topMargin" text="ScheduleStart" />
							<Text id="rescheduleStart" class="topMargin" text="18/01/2016 06:00:00" />
							<Label class="topMargin" text="ScheduleEnd" />
							<Text id="rescheduleEnd" class="topMargin" text="18/01/2016 11:20:00" />
							<Label class="topMargin" text="AcpngStart" />
							<Text id="rescheduleStartAcpng" class="topMargin" text="22/01/2016 00:00:00" />
							<Label class="topMargin" text="AcpngEnd" />
							<Text id="rescheduleEndAcpng" class="topMargin" text="19/02/2016 00:00:00" />
						</f:content>
					</f:SimpleForm>
					<f:SimpleForm maxContainerCols="1" editable="false"
						layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
						labelSpanS="12" emptySpanL="0" emptySpanM="0" emptySpanS="0"
						columnsL="1" columnsM="1" columnsS="1" class="shrinkArea">
						<f:content class="shrinkArea">
							<Label class="topMargin" text="Select New Grp" />
							<Select id="groupIdComboBox" items="{PerformanceModel>/Rowsets/Rowset/0/Row}">
<!-- 								<core:Item key="{PerformanceModel>groupId}" text="{PerformanceModel>groupId}" /> -->
								<core:Item key="1" text="Manually_inserted" />
								<core:Item key="2" text="E16-LB-V84" />								
								<core:Item key="3" text="E16-LD-V90" />								
								<core:Item key="4" text="E16-LL-V90" />								
								<core:Item key="5" text="E16-CE-V90" />								
							</Select>
						</f:content>
					</f:SimpleForm>
					<f:SimpleForm maxContainerCols="1" editable="false"
						layout="ResponsiveGridLayout" labelSpanL="0" labelSpanM="0"
						labelSpanS="0" emptySpanL="3" emptySpanM="0" emptySpanS="0"
						columnsL="1" columnsM="1" columnsS="1" class="shrinkArea">
						<f:content class="shrinkArea">
							<u:Calendar id="DP1">

							</u:Calendar>
						</f:content>
					</f:SimpleForm>
				</VBox>
				<HBox>
					<Button id="Back" text="Back" type="Transparent" class="sapUiTinyMarginBeginEnd" press="onNavBack" />
					<Button id="rescheduleButton" text="Confirm" type="Transparent"  class="sapUiTinyMarginBeginEnd" press="confirmResourceDialog" />
				</HBox>
			</Page>
		</NavContainer>
	</Popover>
</core:FragmentDefinition>