<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified" xmlns:x="sap.uxap" xmlns:custom="airbus.mes.stationtracker">
	<Dialog id="operationPopoverID" showHeader="false"
		contentWidth="770px" contentHeight="395px" verticalScrolling="false" class="noFooterDialog">
		<content>
		<NavContainer id="navOperatorContainer">
		
				<Page id="master" showHeader="false">
						<content>
				
			<x:ObjectPageLayout id="masterLayout"
		enableLazyLoading="false" class="partialConfHeader whitePartialConfHeader whitePartialConfHeader2 lockCss" showFooter="false" >
		<x:headerTitle class="partialConfHeader whitePartialConfHeader whitePartialConfHeader2 lockCss">
			<x:ObjectPageHeader class="whitePartialConfHeader whitePartialConfHeader2 lockCss" objectTitle="Operation: {WorkListModel>/0/operationId}-{WorkListModel>/0/operationDescription}" width="100%" markLocked="true" objectSubtitle="ShopOrder: {WorkListModel>/0/shopOrder}">
				<x:actions>
					<x:ObjectPageHeaderActionButton icon="sap-icon://decline" type="Transparent" press="onCloseWorklist" tooltip="Close" class="closeWorklistCss whiteButton"/>
				</x:actions>
			</x:ObjectPageHeader>
		</x:headerTitle>
		<x:sections>

			<x:ObjectPageSection class="partialConfirmCss partialConfirmCss2 partialConfirmCss3">
				<x:subSections>
					<x:ObjectPageSubSection>
						<x:blocks>
				<VBox id="SPGeneral" class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop">
					<HBox class="sapUiSmallMarginTop">
						<HBox justifyContent="SpaceBetween">
							<Label text="Start: " design="Bold" />
							<Label id="SPStart" text="{ path : 'WorkListModel>/0/startDate' , formatter: 'airbus.mes.stationtracker.util.Formatter.date2Hour' }" class="sapUiTinyMarginBeginEnd" />	<!--							<Label id="SPStart" text="{ path : 'WorkListModel>/0/startDate , formatter: 'airbus.mes.stationtracker.util.Formatter.date2Hour' } " class="sapUiTinyMarginBeginEnd" />  -->
							<Label text="End: " design="Bold" />
							<Label id="SPEnd" text="{ path : 'WorkListModel>/0/endDate' , formatter: 'airbus.mes.stationtracker.util.Formatter.date2Hour' }" class="sapUiTinyMarginBegin sapUiLargeMarginEnd" />
							<Label text="Work Center: " design="Bold"  class="sapUiLargeMarginBegin sapUiTinyMarginEnd" />
							<Label id="SPWorkCenter" text="V90Q3E31" />
						</HBox>
<!-- 						<HBox width="50%" alignContent="End">
							<Label text="Work Center: " design="Bold" />
							<Label id="SPWorkCenter" text="{WorkListModel>/0/shopOrder}" class="sapUiTinyMarginBeginEnd" />
						</HBox> -->
					</HBox>
					<HBox class="sapUiSmallMarginTop" >
						<Label text="Status : " class="italicText"/>
						<Label id="SPGeneralStatus" text="{ path : 'WorkListModel>/0/progress' , formatter: 'airbus.mes.stationtracker.util.Formatter.progress2status' }" class="sapUiTinyMarginBeginEnd italicText"  />
						<Label id="SPGeneralStatusVal" text="{ path : 'WorkListModel>/0/progress' , formatter: 'airbus.mes.stationtracker.util.Formatter.progress2percent' }" class="italicText" />
					</HBox>
					<Panel expandable="true" expanded="false" width="100%"
						backgroundDesign="Transparent" class="sapUiSmallMarginTopBottom">
						<headerToolbar>
							<Toolbar>
							<!-- 	<ProgressIndicator id="SPStatusInd"
									percentValue="{ path : 'WorkListModel>/0/progress' , formatter : 'airbus.mes.stationtracker.util.Formatter.progress2float' }"
									displayValue="{ path : 'WorkListModel>/0/progress' , formatter : 'airbus.mes.stationtracker.util.Formatter.progress2percent' }" showValue="true" state="Success"
									width="100%" class="progressBarOP" /> -->
<!-- 								<Slider value="{ path : 'WorkListModel>/0/progress' , formatter : 'airbus.mes.stationtracker.util.Formatter.progress2float' }" width="50%" class="sapUiSmallMarginBottom" /> -->
							
									<custom:customProgressIndicator
									width="100%" state="sap.ui.core.ValueState.Success" status="{WorkListModel>/0/status}"
									isAndon="{WorkListModel>/0/andons}"
									displayValue="{ parts: [ 'WorkListModel>/0/operationId','WorkListModel>/0/operationDescription','WorkListModel>/0/progress','WorkListModel>/0/totalDuration' ], formatter: 'airbus.mes.stationtracker.util.Formatter.displayValueIM'}"
									percentValue="{ parts: [ 'WorkListModel>/0/progress','WorkListModel>/0/totalDuration' ], formatter: 'airbus.mes.stationtracker.util.Formatter.percentValue'}"
									>
 									<custom:layoutData>
										<FlexItemData baseSize="60%" growFactor="1"></FlexItemData>
									</custom:layoutData>
								</custom:customProgressIndicator>
								
							</Toolbar>
						</headerToolbar>
						<content>
							<Text text="Lorem ipsum dolor st amet, consetetur sadipscing elitr" />
						</content>
					</Panel>

					<HBox>
						<HBox id="SPOperator" width="50%" alignContent="Start">
							<Label text="LT" class="rond sapUiTinyMarginEnd" textAlign="Center" />
							<Label text="assigned to : " class="sapUiTinyMarginEnd" />
							<Label id="SPOperatorName" text="Luisa T." />
						</HBox>
						<HBox width="50%" justifyContent="End" id="SPIcons">
							<Button id="SPIcon1" icon="../components/stationtracker/css/img/3.png" type="Transparent" 
								enabled="true"></Button>
							<Button id="SPIcon2" icon="sap-icon://work-history" type="Transparent"
								enabled="true"></Button>
						</HBox>
					</HBox>
				</VBox>
						
						</x:blocks>
	
					</x:ObjectPageSubSection>
				</x:subSections>
			</x:ObjectPageSection>
		</x:sections>
	</x:ObjectPageLayout>
	</content>
	<footer>
			<Toolbar class="pageHeader">
			
				<Button text="Reschedule" type="Transparent" icon="sap-icon://pending"
					class="sapUiTinyMarginBeginEnd" press="onReschedulePress">
				</Button>
									<ToolbarSeparator class="toolbarSeparatorWhite"/>
				
				<Button text="Add Operator" type="Transparent" icon="sap-icon://company-view"
					class="sapUiTinyMarginBeginEnd" press="onAssignOpPress">
				</Button>
									<ToolbarSeparator class="toolbarSeparatorWhite"/>
				
				<Button text="Set OSW" type="Transparent" icon="sap-icon://forward"
					class="sapUiTinyMarginBeginEnd" press="onSetOSWPress">
				</Button>
									<ToolbarSeparator class="toolbarSeparatorWhite"/>
				
				<Button text="Confirm Partial" type="Transparent" icon="sap-icon://multi-select"
					class="sapUiTinyMarginBeginEnd" press="onPartialPress">
				</Button>
									<ToolbarSeparator class="toolbarSeparatorWhite"/>
				
				<Button text="Confirm Total" type="Transparent" icon="sap-icon://accept"
					class="sapUiTinyMarginBeginEnd" press="onTotalPress">
				</Button>
			</Toolbar>
	</footer>
	</Page>	
			
				<Page id="Reschedule" showHeader="false">
			<x:ObjectPageLayout id="rescheduleTitle"
		enableLazyLoading="false" class="partialConfHeader whitePartialConfHeader whitePartialConfHeader2 lockCss" >
		<x:headerTitle class="partialConfHeader whitePartialConfHeader whitePartialConfHeader2 lockCss">
			<x:ObjectPageHeader class="whitePartialConfHeader whitePartialConfHeader2 lockCss" objectTitle="Operation: {WorkListModel>/0/operationId}-{WorkListModel>/0/operationDescription}" width="100%" markLocked="true" objectSubtitle="ShopOrder: {WorkListModel>/0/shopOrder}">
				<x:actions>
					<x:ObjectPageHeaderActionButton icon="sap-icon://decline" type="Transparent" press="onCloseWorklist" tooltip="Close" class="closeWorklistCss whiteButton"/>
				</x:actions>
			</x:ObjectPageHeader>
		</x:headerTitle>
		<x:sections>

			<x:ObjectPageSection  class="partialConfirmCss partialConfirmCss2">
				<x:subSections>
					<x:ObjectPageSubSection title="Reschedule Operation" titleUppercase="false">
						<x:blocks>

		<HBox justifyContent="SpaceAround">

			<VBox class="commentConfirmCss">
				<HBox class="sapUiSmallMarginBottom">
					<Label text="ScheduleStart:" class="sapUiTinyMarginEnd" />
					<Text id="rescheduleStart" text="18/01/2016 06:00:00" />
				</HBox>
				<HBox class="sapUiSmallMarginBottom">

					<Label text="ScheduleEnd:" class="sapUiTinyMarginEnd" />
					<Text id="rescheduleEnd" text="18/01/2016 11:20:00" />
				</HBox>
				<HBox class="sapUiSmallMarginBottom">

					<Label text="AcpngStart:" class="sapUiTinyMarginEnd" />
					<Text id="rescheduleStartAcpng" text="22/01/2016 00:00:00" />
				</HBox>
				<HBox class="sapUiSmallMarginBottom">

					<Label text="AcpngEnd: " class="sapUiTinyMarginEnd" />
					<Text id="rescheduleEndAcpng" text="19/02/2016 00:00:00" />
				</HBox>


				<Label class="sapUiLargeMarginTop" text="Select New Grp" />
				<Select id="groupIdComboBox" items="{PerformanceModel>/Rowsets/Rowset/0/Row}"
					width="100%">
					<!-- <core:Item key="{PerformanceModel>groupId}" text="{PerformanceModel>groupId}" 
						/> -->
					<core:Item key="1" text="Manually_inserted" />
					<core:Item key="2" text="E16-LB-V84" />
					<core:Item key="3" text="E16-LD-V90" />
					<core:Item key="4" text="E16-LL-V90" />
					<core:Item key="5" text="E16-CE-V90" />
				</Select>
			</VBox>
			<VBox>
				<u:Calendar id="DP1"></u:Calendar>
			</VBox>
		</HBox>

						</x:blocks>
	
					</x:ObjectPageSubSection>
				</x:subSections>
			</x:ObjectPageSection>


		</x:sections>

	</x:ObjectPageLayout>
		<footer>
			<Toolbar class="pageHeader">
							<ToolbarSpacer/>
			
		<Button id="Cancel" text="Back"  class="sapUiTinyMarginBeginEnd" icon="sap-icon://decline"
				press="onNavBack" />
													<ToolbarSeparator class="toolbarSeparatorWhite"/>
				
			<Button id="rescheduleButton" text="Confirm" icon="sap-icon://accept"
				class="sapUiTinyMarginBeginEnd" press="confirmResourceDialog" />
			</Toolbar>
	</footer>
	</Page>
			
			<Page id="confirmOperation" showHeader="false">
			<x:ObjectPageLayout id="confirmOperationLayout"
		enableLazyLoading="false" class="partialConfHeader whitePartialConfHeader whitePartialConfHeader2 lockCss" >
		<x:headerTitle class="partialConfHeader whitePartialConfHeader whitePartialConfHeader2 lockCss">
			<x:ObjectPageHeader class="whitePartialConfHeader whitePartialConfHeader2 lockCss" objectTitle="Operation: {WorkListModel>/0/operationId}-{WorkListModel>/0/operationDescription}" width="100%" markLocked="true" objectSubtitle="ShopOrder: {WorkListModel>/0/shopOrder}">
				<x:actions>
					<x:ObjectPageHeaderActionButton icon="sap-icon://decline" type="Transparent" press="onCloseWorklist" tooltip="Close" class="closeWorklistCss whiteButton"/>
				</x:actions>
			</x:ObjectPageHeader>
		</x:headerTitle>
		<x:sections>

			<x:ObjectPageSection title="Section 1"  class="partialConfirmCss partialConfirmCss2">
				<x:subSections>
					<x:ObjectPageSubSection title="Partial Confirmation" titleUppercase="false">
						<x:blocks>
						<HBox justifyContent="SpaceAround">
						
	  					<VBox class="sapUiSmallMarginEnd">
						<Label text="Remaining Time:"/>
						<Label text="17.81 IM" class="blueTitle"/>
						<Label text="Duration:"/>
						<Label text="{ path : 'WorkListModel>/0/totalDuration' , formatter : 'airbus.mes.stationtracker.util.Formatter.totalDurationToIM' }" class="blueTitle"/>
						</VBox>
						
						<VBox class="sapUiSmallMarginEnd">
						<Label text="Progress:"/>
						
						<Slider value="{ path : 'WorkListModel>/0/progress' , formatter : 'airbus.mes.stationtracker.util.Formatter.progress2float' }" width="100%" step="10"/>	
						
						<Label text="Reason"/>
						<Select id="confirmPartialReason">
								<core:Item key="1p" text="0000 - None" />
								<core:Item key="2p" text="0001 - Technical problem" />								
								<core:Item key="3p" text="0002 - End of Shift" />								
								<core:Item key="4p" text="0003 - All Done Excep" />								
								<core:Item key="5p" text="0004 - All Checked Except" />	
								<core:Item key="6p" text="0005 - NC(Non conformity)" />								
								<core:Item key="7p" text="0006 - Serial number issue" />								
								<core:Item key="8p" text="0007 - Missing part" />								
								<core:Item key="9p" text="Z001 - BC to TL" />								
								<core:Item key="10p" text="Z002 - BC to Q" />								
								<core:Item key="11p" text="Z003 - TL to Q" />								
								<core:Item key="12p" text="Z004 - TL to NF" />								
								<core:Item key="13p" text="Z006 - Q to TL" />	
								<core:Item key="14p" text="Z007 - Q to NF" />																
						</Select>
						</VBox >
						
						<VBox class="sapUiSmallMarginEnd commentConfirmCss">
						<TextArea id="commentValueConfirm" width="100%" placeholder="Comments" rows="5"/>
						</VBox>
						
						<VBox class="sapUiSmallMarginEnd">
							<Input id="userNameFieldPartial" type="Text" placeholder="Username"  liveChange="usernameLive" />	
							<Input id="passwordFieldPartial" type="Password" placeholder="Password"   liveChange="passwordLive" />
							<HBox  justifyContent="SpaceBetween">
							<Label text="Or badge" class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>
							<Button icon="sap-icon://business-card" type="Emphasized"/>
							</HBox>				
						</VBox>
						
						</HBox>
				
						</x:blocks>
	
					</x:ObjectPageSubSection>
				</x:subSections>
			</x:ObjectPageSection>


		</x:sections>

	</x:ObjectPageLayout>
			<footer>
			<Toolbar class="pageHeader">
			<ToolbarSpacer/>
			<Button iconFirst="false" text="Cancel" icon="sap-icon://decline" class="sapUiSmallMarginEnd" press="onNavBack"/>
												<ToolbarSeparator class="toolbarSeparatorWhite"/>
									
			<Button iconFirst="false" text="Confirm" icon="sap-icon://accept" />
			</Toolbar>
		</footer>
	</Page>
	
	<Page id="confirmOperationTotal" showHeader="false">
			<x:ObjectPageLayout id="confirmOperationTotalLayout"
		enableLazyLoading="false" class="partialConfHeader whitePartialConfHeader whitePartialConfHeader2 lockCss" >
		<x:headerTitle class="partialConfHeader whitePartialConfHeader whitePartialConfHeader2 lockCss">
			<x:ObjectPageHeader class="whitePartialConfHeader whitePartialConfHeader2 lockCss" objectTitle="Operation: {WorkListModel>/0/operationId}-{WorkListModel>/0/operationDescription}" width="100%" markLocked="true" objectSubtitle="ShopOrder: {WorkListModel>/0/shopOrder}">
				<x:actions>
					<x:ObjectPageHeaderActionButton icon="sap-icon://decline" type="Transparent" press="onCloseWorklist" tooltip="Close" class="closeWorklistCss whiteButton"/>
				</x:actions>
				
			</x:ObjectPageHeader>
		</x:headerTitle>
		<x:sections>

			<x:ObjectPageSection title="Section 1"  class="partialConfirmCss partialConfirmCss2">
				<x:subSections>
					<x:ObjectPageSubSection title="Total Confirmation" titleUppercase="false">
						<x:blocks>
						<HBox justifyContent="SpaceAround">
						
						<VBox class="sapUiSmallMarginEnd" justifyContent="Center">
							<Input id="userNameFieldTotal" type="Text" placeholder="Username"  liveChange="usernameLive" />	
							<Input id="passwordFieldTotal" type="Password" placeholder="Password"   liveChange="passwordLive" />
							<HBox  justifyContent="SpaceBetween">
							<Label text="Or badge" class="sapUiSmallMarginEnd sapUiSmallMarginTop"/>
							<Button icon="sap-icon://business-card" type="Emphasized"/>
							</HBox>				
						</VBox>
						
						</HBox>
	
						</x:blocks>
	
					</x:ObjectPageSubSection>
				</x:subSections>
			</x:ObjectPageSection>


		</x:sections>

	</x:ObjectPageLayout>
				<footer>
			<Toolbar class="pageHeader">
		<ToolbarSpacer/>
		<Button iconFirst="false" text="Cancel" icon="sap-icon://decline" class="sapUiSmallMarginEnd" press="onNavBack"/>		
											<ToolbarSeparator class="toolbarSeparatorWhite"/>
						
		<Button iconFirst="false" text="Confirm" icon="sap-icon://accept" />
			</Toolbar>
		</footer>
	</Page>
			
		</NavContainer>
		</content>
	</Dialog>
</core:FragmentDefinition>