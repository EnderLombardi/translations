<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Dialog id="resourceDialog" title="RescheduleActivityTitle" horizontalScrolling="false"
		placement="Bottom" class="sapUiSizeCompact">
		<content>
			<VBox>
				<f:SimpleForm maxContainerCols="1" editable="false"
					layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="4"
					labelSpanS="6" emptySpanL="2" emptySpanM="2" emptySpanS="0"
					columnsL="1" columnsM="1" columnsS="1" class="shrinkArea">
					<f:content class="shrinkArea">
						<Label class="topMargin" text="{StationTrackerI18n>ReschedulePopupReschStart}" />
						<Text id="rescheduleStart" class="topMargin" 
							text="{RescheduleModel>START_TIME}" />
						<Label class="topMargin" text="{StationTrackerI18n>ReschedulePopupReschEnd}" />
						<Text id="{RescheduleModel>End_TIME}" class="topMargin"
							text="" />
						<Label class="topMargin" text="{StationTrackerI18n>ReschedulePopupAcpStart}" />
						<Text id="rescheduleStartAcpng" class="topMargin"
							text="" />
						<Label class="topMargin" text="{StationTrackerI18n>ReschedulePopupAcpEnd}" />
						<Text id="rescheduleEndAcpng" class="topMargin"
							text="" />
					</f:content>
				</f:SimpleForm>
				<f:SimpleForm maxContainerCols="1" editable="false"
					layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4"
					labelSpanS="12" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					columnsL="1" columnsM="1" columnsS="1" class="shrinkArea">
					<f:content class="shrinkArea">
						<Label class="topMargin" text="SelectNewGrp" />
						<Select
							id="groupIdComboBox"
							items="{PerformanceModel>/Rowsets/Rowset/0/Row}">
							<core:Item key="{PerformanceModel>groupId}" text="{PerformanceModel>groupId}" />
						</Select>
					</f:content>
				</f:SimpleForm>
				<f:SimpleForm maxContainerCols="1" editable="false"
					layout="ResponsiveGridLayout" labelSpanL="0" labelSpanM="0"
					labelSpanS="0" emptySpanL="3" emptySpanM="0" emptySpanS="0"
					columnsL="1" columnsM="1" columnsS="1" class="shrinkArea">
					<f:content class="shrinkArea">
						<u:Calendar id="DP1">

						</u:Calendar>
					</f:content>
				</f:SimpleForm>
			</VBox>
<!-- 			<VBox>
				<Button id="removeButton" text="Remove" press="removeResourceDialog" visible="false" />
				<Button id="rescheduleButton" text="Confirm" press="confirmResourceDialog" />
				<Button text="Close" press="closeResourceDialog" />
			</VBox>			
 -->		</content>
		<buttons>
			<Button text="{StationTrackerI18n>ReschedulePopupConfirm}" type="Transparent" icon="sap-icon://forward"
				class="sapUiTinyMarginBeginEnd pageHeaderDialog" press="onRescheduleConfirm"
				>
			</Button>
			<Button text="{StationTrackerI18n>Close}" type="Transparent" icon="sap-icon://decline"
				class="sapUiTinyMarginBeginEnd" press="onCloseDialog"
			>
			</Button>
		</buttons>	
	</Dialog>
</core:FragmentDefinition>