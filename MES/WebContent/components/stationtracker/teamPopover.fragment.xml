<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover id="teamPopoverID" title="{StationTrackerI18n>HeaderTeam}"
		horizontalScrolling="false" placement="Bottom">
		<content>
			<List>
				<CustomListItem>
					<Button type="Transparent" text="{StationTrackerI18n>ButtonOpenTeam}"
						iconFirst="true" icon="sap-icon://navigation-right-arrow" width="100%"
						class="blackTextButton blackTextButton2" press="onPolypolyOpen"></Button>
					
					<Button type="Transparent" text="{StationTrackerI18n>ButtonPolypoly}"
						iconFirst="true" icon="sap-icon://navigation-right-arrow" width="100%"
						class="blackTextButton blackTextButton2" press="onPolypolyOpen"></Button>
					
					<Button type="Transparent" text="{StationTrackerI18n>FooterTeam}"
				iconFirst="true" icon="sap-icon://navigation-right-arrow" width="100%"
						class="blackTextButton blackTextButton2"></Button>
				</CustomListItem>
			</List>

		</content>
	</Popover>
</core:FragmentDefinition>

