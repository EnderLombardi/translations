<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="teamPopoverID"
		title="Team"
		horizontalScrolling="false"
		placement="Bottom">
		<content>
		<List>
		<CustomListItem>

		  	<Button type="Transparent" text="Open team availability" iconFirst="true" icon="sap-icon://navigation-right-arrow" width="100%" class="blackTextButton blackTextButton2" press="onPolypolyOpen" ></Button> 
			<Button type="Transparent" text="Open poly poly matrix" iconFirst="true" icon="sap-icon://navigation-right-arrow" width="100%" class="blackTextButton blackTextButton2" press="onPolypolyOpen" ></Button> 

			<Panel expandable="true" expanded="false" class="panelContent panelContentList textBlackPanel">
             <headerToolbar>
                    <Toolbar width="100%">
                    <Label text="List of team members"/>        	
                    </Toolbar>
             </headerToolbar>
             <content>
             				<List showSeparators="None" headerText="List of 42 operators" class="operatorList">
             				<CustomListItem>
             				<HBox>
                    		     	<Label text="MK" class="rond sapUiSmallMarginBeginEnd"/>
                    		    	<Label text="Mark K." class="sapUiSmallMarginBottom"/>
                    		</HBox>
                    		<HBox>
                    		     	<Label text="LA" class="rond sapUiSmallMarginBeginEnd"/>
                    		    	<Label text="Luca" class="sapUiSmallMarginBottom"/>
                    		</HBox>
                    		<HBox>
                    		     	<Label text="PC" class="rond sapUiSmallMarginBeginEnd"/>
                    		    	<Label text="Paola C." class="sapUiSmallMarginBottom"/>
                    		</HBox>
                    		<HBox>
                    		     	<Label text="JJ" class="rond sapUiSmallMarginBeginEnd"/>
                    		    	<Label text="Jae J." class="sapUiSmallMarginBottom"/>
                    		</HBox>
                    		<HBox>
                    		     	<Label text="MK" class="rond sapUiSmallMarginBeginEnd"/>
                    		    	<Label text="Mark K." class="sapUiSmallMarginBottom"/>
                    		</HBox>
                    		<HBox>
                    		     	<Label text="SS" class="rond sapUiSmallMarginBeginEnd"/>
                    		    	<Label text="Steve S." class="sapUiSmallMarginBottom"/>
                    		</HBox>
                    		</CustomListItem>
                    		</List>
           	</content>
           	</Panel>
           	<Button type="Transparent" text="Load operators from other stations" icon="sap-icon://sort" width="100%" class="otherStations whiteTextButton whiteButton"></Button> 
		</CustomListItem>
		</List> 
		
		</content>
	</Popover>
</core:FragmentDefinition>

