<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">

    <Dialog title="{ parts : ['StationTrackerI18n>RescheduleLinePopUpTitle', 'RescheduleLineData>/avlLine' ], formatter: 'jQuery.sap.formatMessage' }" 
            state="Warning" type="Message" id="rescheduleLinePopUp" class=""
            stretchOnPhone="true" verticalScrolling="false">
            <!-- width="70% !important" height="100%" contentWidth="60%" contentHeight="50%" showHeader="false" -->
        <content>
        <Text text="{ parts : ['StationTrackerI18n>RescheduleLinePopUpContent', 'RescheduleLineData>/count' ], formatter: 'jQuery.sap.formatMessage' }" />
        </content>

        <buttons>
            <Button id="btnReschedule"      text="Yes" icon="sap-icon://accept"  press="sendRescheduleLine"/>
            <Button id="btnRescheduleClose" text="No"  icon="sap-icon://decline" press="closeRescheduleLinePopUp"/>
        </buttons>
    </Dialog>

</core:FragmentDefinition>
