<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">

    <Dialog id="rescheduleLinePopUp" class=""
    		title="{ parts : ['StationTrackerI18n>RescheduleLinePopUpTitle', 'RescheduleLineData>/avlLine' ], formatter: 'jQuery.sap.formatMessage' }" 
            state="Warning" type="Message"
            stretchOnPhone="true" verticalScrolling="false">
            <!-- width="70% !important" height="100%" contentWidth="60%" contentHeight="50%" showHeader="false" -->
        
        <content>
        	<Text text="{ parts : ['StationTrackerI18n>RescheduleLinePopUpContent', 'RescheduleLineData>/count' ], formatter: 'jQuery.sap.formatMessage' }" />
        </content>

        <buttons>
            <Button id="btnConfirmRescheduleLinePopUp" class="" text="Yes" icon="sap-icon://accept"  press="confirmRescheduleLinePopUp"/>
            <Button id="btnCloseRescheduleLinePopUp"   class="" text="No"  icon="sap-icon://decline" press="closeRescheduleLinePopUp"/>
        </buttons>
        
    </Dialog>

</core:FragmentDefinition>
