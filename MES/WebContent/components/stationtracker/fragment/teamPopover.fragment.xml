<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover id="teamPopoverID" title="{StationTrackerI18n>Team}"
		horizontalScrolling="false" placement="Bottom" showArrow="true">
		<content>
			<List id="team-popover">
				<CustomListItem class="customListItem">
					<Button type="Transparent" text="{StationTrackerI18n>ButtonOpenTeam}"
						enabled="true" iconFirst="true" icon="sap-icon://sort"
						class="blackButton blackTextButton blackTextButton2" press="onCalendarOpen"></Button>

					<Button type="Transparent" text="{StationTrackerI18n>ButtonPolypoly}"
						iconFirst="true" icon="sap-icon://sort" class="blackButton blackTextButton blackTextButton2"
						press="onPolypolyOpen"></Button>

					<Button type="Transparent" text="{StationTrackerI18n>FooterTeam}"
						iconFirst="true" icon="sap-icon://sort" class="blackButton blackTextButton blackTextButton2"
						press="onResourcePoolOpen"></Button>
				</CustomListItem>
			</List>
		</content>
	</Popover>
</core:FragmentDefinition>

