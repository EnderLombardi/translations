<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" >
	<Popover placement="Bottom" showHeader="false" contentWidth="10%" contentHeight="auto" afterClose="onProdGroupSelFinish" >
		<List id="myList"
			items="{ path : 'productionGroupModel>/Rowsets/Rowset/0/Row' }"
			mode="MultiSelect"
			includeItemInSelection="true"
			showArrow="false"
			>
			<items>
				<InputListItem key="{productionGroupModel>PROD_GROUP}" 
				              label="{productionGroupModel>PROD_GROUP}" >
				</InputListItem>
			</items>
		</List>
	</Popover>
</core:FragmentDefinition>
