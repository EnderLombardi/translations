<core:View controllerName="airbus.mes.stationHandover.controller.stationHandover"
	xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m"
	xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core"	xmlns:custom="airbus.mes.stationHandover.util"
	>

	<m:Page showHeader="false" enableScrolling="false" height="100%"
		class="sapUiSizeCozy">
		<m:content>

 

			<TreeTable id="TreeTableBasic"
				rows="{path:'oswModel>/', parameters: {arrayNames:['row']}}"
				selectionMode="None" enableSelectAll="true"
				visibleRowCountMode="15rem"
				showColumnVisibilityMenu="true"
				cellClick ="onRowClick">
				<extension>
					
					<m:Toolbar id="kpiHeaderToolbar"
						class="classKpiheaderToolbar pageHeader kpiPageHeader contentNoPad">
						<m:Label id="stationHandover" text="{stationHandoverI18n>stationHandover}"
							class="classDateLabel" />
						<m:Select id="selectStationHandover" class="comboStationHandover"
							change="changeShift" items="{ path : 'msnModel>/' , sorter : {
            path : 'text' , descending : 'false'            
         } }">
							<core:Item key="{selectMSN>key}" text="{TrackerShift>shiftName}" />
						</m:Select>
						<m:Select id="selectMsnHandover" class="comboStationHandover"
							change="changeShift"
							items="{ path : 'msnModel>/' }">
							<core:Item key="{msnModel>key}" text="{msnModel>msn}" />

						</m:Select>

					</m:Toolbar>

					<m:OverflowToolbar id="headerstationhandover">
						<m:Button id="navBack" icon="sap-icon://arrow-left" press="onBackPress" type="Transparent"/>
						<m:SearchField width="15%" id="searchHandover" liveChange="filterWo" />
						<m:Select id="groupHandover" change="sorterMode"
							items="{ path : 'groupModel>/' }" >
							<core:Item key="{groupModel>key}" text="{path:'groupModel>type' , formatter:'airbus.mes.stationHandover.util.Formatter.translate'}" />
						</m:Select>
					<m:Select id="typeHandOver" change="filterOSW"
							items="{ path : 'typeModel>/' }" >
							<core:Item key="{typeModel>key}" text="{path:'typeModel>type' , formatter:'airbus.mes.stationHandover.util.Formatter.translate'}" />
						</m:Select>
					<m:Select id="originHandOver" change="changeStation"
							items="{ path : 'oswModel>/row/' }">
							<core:Item key="{oswModel>ORIGIN_STATION}" text="{oswModel>ORIGIN_STATION}" />
						</m:Select>
					
						<m:ToolbarSpacer />
									
						<m:CheckBox text="{stationHandoverI18n>ShowOpwithNoTime}"
							selected="false" select="filterNoTime" />
						<m:CheckBox text="{stationHandoverI18n>ShowInsertedLines}"
							selected="false" select="filterInsertedLines"/>
						
						<m:ToolbarSpacer />
												
						<m:Button id="insertHandOver" text="{stationHandoverI18n>insert}"/>
							
					</m:OverflowToolbar>

				</extension>
				<columns>
					<Column width="5rem">
							<m:CheckBox class="DisOpAttLabelHandOver"/>
						<template>
							<m:CheckBox selected="{path:'oswModel>INSERTED' , formatter:'airbus.mes.stationHandover.util.Formatter.isInsert'}" 
							enabled="{path:'oswModel>INSERTED' , formatter:'airbus.mes.stationHandover.util.Formatter.isInsertEnabled'}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>Blocked}" />
						<template>
							<custom:customIcon />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>Type}" />
						<template>
							<m:Label text="{oswModel>TYPE}" />
						</template>
					</Column>
						<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>Reference}" />
						<template>
							<m:Label text="{oswModel>REFERENCE}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>Description}" />
						<template>
							<m:Label text="{oswModel>DESCRIPTION}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>FrozenTrackingTemplate}" />
						<template>
							<m:Label text="{oswModel>FROZEN_TRACKING}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver"
							text="{stationHandoverI18n>FrozenListOFittedHandover}" />
						<template>
							<m:Label text="{oswModel>FROZEN_LIST}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>RemainingTime}" />
						<template>
							<m:Label text="{oswModel>REMAINING_TIME}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>Confirmation}" />
						<template>
							<m:Label text="{oswModel>CONFIRMATION}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>UserStatus}" />
						<template>
							<m:Label text="{oswModel>USER_STATUS}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>Competence}" />
						<template>
							<m:Label text="{oswModel>COMPETENCE}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>ReviewedEndDate}" />
						<template>
							<m:Label text="{oswModel>REVIEWED_END_DATE}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>FamilyTarget}" />
						<template>
							<m:Label text="{oswModel>FAMILY_TARGET}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>BlockingReason}" />
						<template>
							<m:Label text="{oswModel>BLOCKING_REASON}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>CA}" />
						<template>
							<m:Label text="{oswModel>CA}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>TDL}" />
						<template>
							<m:Label text="{oswModel>TDL}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>Zoning}" />
						<template>
							<m:Label text="{oswModel>ZONING}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>ATA/subATA}" />
						<template>
							<m:Label text="{oswModel>ATA_SUBATA}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>WorkPackage}" />
						<template>
							<m:Label text="{oswModel>WORK_PACKAGE}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>Note}" />
						<template>
							<m:Label text="{oswModel>NOTE}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>ACPWorkstation}" />
						<template>
							<m:Label text="{oswModel>ACP_WORK_PACKAGE}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>FatherLink}" />
						<template>
							<m:Label text="{oswModel>FATHER_LINK}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>ExecStation}" />
						<template>
							<m:Label text="{oswModel>EXEC_STATION}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>OriginWorkstation}" />
						<template>
							<m:Label text="{oswModel>ORIGIN_WORKSTATION}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>UpperFamily}" />
						<template>
							<m:Label text="{oswModel>UPPER_FAMILY}" />
						</template>
					</Column>
					<Column autoResizable="true">
						<m:Label class="DisOpAttLabelHandOver" text="{stationHandoverI18n>MaterialDescription}" />
						<template>
							<m:Label text="{oswModel>MATERIAL_DESCRIPTION}" />
						</template>
					</Column>



				</columns>
			</TreeTable>
		</m:content>
	</m:Page>
</core:View>
