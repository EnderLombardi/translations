<core:View controllerName="airbus.mes.stationHandover.controller.stationHandover"
	xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m"
	xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core">

	<m:Page showHeader="false" enableScrolling="false" height="100%">
		<m:content>
			<TreeTable id="DOATable" class="DOATable"
				rows="{getOpeAttachments>/Rowsets/Rowset/0/Row}" ariaLabelledBy="title">
				<columns>
					<Column width="20%">
						<m:Label class="DisOpAttLabel"
							text="{stationHandoverI18n>Select}" />
						<template>
							<m:Text text="{getOpeAttachments>dokarOrDoknr}" />
						</template>
					</Column>
					<Column width="45%">
						<m:Label class="DisOpAttLabel"
							text="{stationHandoverI18n>doc_description}" />
						<template>
							<m:Text text="{getOpeAttachments>description}" />
						</template>
					</Column>
					<Column width="15%">
						<m:Label class="DisOpAttLabel"
							text="{stationHandoverI18n>file_name}" />
						<template>
							<m:Text text="{getOpeAttachments>fileName}" />
						</template>
					</Column>
					<Column width="10%">
						<m:Label class="DisOpAttLabel" text="{stationHandoverI18n>doc_part}" />
						<template>
							<m:Text text="{getOpeAttachments>doktl}" />
						</template>
					</Column>
					<Column width="10%">
						<m:Label class="DisOpAttLabel"
							text="{stationHandoverI18n>doc_version}" />
						<template>
							<m:Text text="{getOpeAttachments>revision}" />
						</template>
					</Column>
				</columns>
			</TreeTable>
		</m:content>
	</m:Page>
</core:View>