<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:t="sap.ui.table">
	<t:Table title="{i18n>checkList}" visibleRowCount="6"
		selectionBehavior="RowOnly" rows="{tasklist>/checklist}" rowHeight="1px"
		showNoData="false">
		<t:columns>
			<t:Column width="5rem">
				<Label text="{i18n>pointOfAttention}" />
				<t:template>
					<Text text="{tasklist>col1}" />
				</t:template>
			</t:Column>
			<t:Column width="5rem">
				<Label text="{i18n>record}" />
				<t:template>
					<Input value="{tasklist>col2}" />
				</t:template>
			</t:Column>
		</t:columns>
	</t:Table>
</core:FragmentDefinition>