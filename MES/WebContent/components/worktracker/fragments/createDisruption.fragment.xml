<core:FragmentDefinition xmlns="sap.m"  xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">

	<f:Form id="FormToolbar" editable="true" ariaLabelledBy="Title1" class="sapUiSmallMargin" visible="false">
					<f:layout>
						<f:ResponsiveGridLayout span="L12 M12 S12" />
					</f:layout>
					<f:formContainers>
						<f:FormContainer ariaLabelledBy="Title2">
							<f:formElements>

								<f:FormElement>

									<Title text=" {i18n>createDisruptions}" titleStyle="H4">
										<layoutData>
											<l:GridData span="L3 M6 S12" linebreak="true" />
										</layoutData>
									</Title>


								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="{i18n>gravity}">
											<layoutData>
												<l:GridData span="L2 M6 S12" linebreak="true" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>
										<Select id="Gravity" selectedKey="Blocked">
											<items>
												<core:Item text="{i18n>blocked}" key="blocked" />
												<core:Item text="{i18n>blocked}" key="blocked" />
												<core:Item text="{i18n>blocked}" key="blocked" />
											</items>
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>

										</Select>
									</f:fields>
								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="{i18n>object}">
											<layoutData>
												<l:GridData span="L2 M6 S12" linebreak="true" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>
										<Select id="Object" selectedKey="Assembly">
											<items>
												<core:Item text="{i18n>assembly}" key="Assembly" />
												<core:Item text="{i18n>assembly}" key="Assembly" />
												<core:Item text="{i18n>assembly}" key="Assembly" />
											</items>
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>
										</Select>
									</f:fields>
								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="Nature">
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>
										<Select id="Nature" selectedKey="Non Confirm">
											<items>
												<core:Item text="{i18n>nonConfirm}" key="Confirm" />
												<core:Item text="{i18n>confirm}" key="Confirm" />
												<core:Item text="{i18n>confirm}" key="Confirm" />
											</items>
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>

										</Select>
									</f:fields>
								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="{i18n>help}">
											<layoutData>
												<l:GridData span="L2 M6 S12" linebreak="true" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>
										<Select id="Help" selectedKey="Logistic Support">
											<items>
												<core:Item text="{i18n>logisticSupport}" key="Logistic Support" />
												<core:Item text="{i18n>support}" key="Support" />
												<core:Item text="{i18n>support}" key="Support" />
											</items>
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>
										</Select>
									</f:fields>
								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="{i18n>openDate}">
											<layoutData>
												<l:GridData span="L2 M6 S12" linebreak="true" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>
									<DatePicker id="opendate" valueFormat="yyyy-MM-dd" displayFormat="long" change="handleChange">
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>
									</DatePicker>
									</f:fields>
								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="{i18n>time}">
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>
										<TimePicker id="time">
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>
										</TimePicker>
									</f:fields>
								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="{i18n>expected}">
											<layoutData>
												<l:GridData span="L2 M6 S12" linebreak="true" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>
										<DatePicker id="Expected" valueFormat="yyyy-MM-dd" displayFormat="long" change="handleChange">
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>
									</DatePicker>
									</f:fields>
								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="{i18n>time}">
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>
										<TimePicker id="time2">
											<layoutData>
												<l:GridData span="L2 M6 S12" />
											</layoutData>
										</TimePicker>
									</f:fields>
								</f:FormElement>
								
								<f:FormElement>
									<f:label>
										<Label text="">
											<layoutData>
												<l:GridData span="L7 M7 S12" linebreak="true" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>															
								</f:fields>
								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="">
											<layoutData>
												<l:GridData span="L2 M6 S12" linebreak="true" />
											</layoutData>
										</Label>
									</f:label>
									<TextArea placeholder="{i18n>addComment}"  icon="sap-icon://sort" id="addMessage" valueLiveUpdate="true">
										<layoutData>
											<l:GridData span="L6 M6 S12" />
										</layoutData>
									</TextArea>
								</f:FormElement>

								<f:FormElement>
									<f:label>
										<Label text="">
											<layoutData>
												<l:GridData span="L4 M6 S12" linebreak="true" />
											</layoutData>
										</Label>
									</f:label>
									<f:fields>
										<Button text="{i18n>cancel}" press="onCancelCreateDisruption">
											<layoutData>
												<l:GridData span="L2 M2 S12" />
											</layoutData>
										</Button>
										<Button text="{i18n>create}" class="btnColor" press="onCreateDisrupt">
											<layoutData>
												<l:GridData span="L2 M2 S12" />
											</layoutData>
										</Button>
									</f:fields>
								</f:FormElement>

							</f:formElements>
						</f:FormContainer>
					</f:formContainers>
				</f:Form>
</core:FragmentDefinition>
