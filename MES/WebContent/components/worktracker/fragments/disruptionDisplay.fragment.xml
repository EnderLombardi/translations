<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Panel class="disruptionPanel sapUiSmallMargin" id="disruptionsHeader">
		<Toolbar>
			<Title text="Disruptions" titleStyle="H4" width="100%" />
			<Button text="Create new Disruption" icon="sap-icon://sort"
				press="onCreateDisruption" />
		</Toolbar>
		<List noDataText="No Disruptions Found" items="{disruptionModel>/Disruption}">
			<CustomListItem>
				<Panel expandable="true" expanded="false" class="barColor">
					<headerToolbar class="">
						<Toolbar>
							<Title text="Luca A. has created a Disruption" class="panelTitleText" />
							<ToolbarSpacer />
							<Button class="decoratePanelBtn" text="Delete" icon="sap-icon://delete" />
							<Button class="decoratePanelBtn" text="Edit" icon="sap-icon://edit" />
						</Toolbar>
					</headerToolbar>
					<!-- <f:SimpleForm id="formDisruptionDetail" editable="true" class="formBackground"> 
						labelSpanL="1" labelSpanM="2" adjustLabelSpan="false" emptySpanL="0" emptySpanM="0" 
						columnsL="4" columnsM="4" <f:content> <VBox> <HBox> <Label text="Gravity" 
						/> <Text text="{disruptionModel>Gravity}" /> <Label text="Date" /> <Text 
						text="{disruptionModel>Open Date} {disruptionModel>Time}" /> </HBox> <HBox> 
						<Label text="Problem" /> <Text text="{disruptionModel>Object}" /> <Label 
						text="Expected" /> <Text text="{disruptionModel>Expected} {disruptionModel>TimeEx}" 
						/> </HBox> <HBox> <Label text="" /> <Text text="{disruptionModel>Nature}" 
						/> <Label text="Help" /> <Text text="{disruptionModel>Help}" /> </HBox> <HBox> 
						<Label text="" /> <Text text="" /> <Label text="status" /> <Label text="{disruptionModel>Status}" 
						/> </HBox> </VBox> </f:content> </f:SimpleForm> -->
					<f:Form id="formDisruptionDetail" editable="true">
						<f:layout>
							<f:ResponsiveGridLayout span="L12 M12 S12" />
						</f:layout>
						<f:formContainers>
							<f:FormContainer ariaLabelledBy="Title2">
								<f:formElements>


									<f:FormElement>
										<f:label>
											<Label text="Gravity">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<Text text="{disruptionModel>Gravity}">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Text>
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label text="Date">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<Text text="{disruptionModel>Open Date} {disruptionModel>Time}">
												<layoutData>
													<l:GridData span="L6 M6 S12" />
												</layoutData>
											</Text>
										</f:fields>
									</f:FormElement>


									<f:FormElement>
										<f:label>
											<Label text="Problem">
												<layoutData>
													<l:GridData span="L2 M2 S12" linebreak="true" />
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<Text text="{disruptionModel>Object}">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Text>
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label text="Expected">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<Text text="{disruptionModel>Expected} {disruptionModel>TimeEx}">
												<layoutData>
													<l:GridData span="L6 M6 S12" />
												</layoutData>
											</Text>
										</f:fields>
									</f:FormElement>

									<f:FormElement>
										<f:label>
											<Label text="Nature">
												<layoutData>
													<l:GridData span="L2 M2 S12" linebreak="true" />
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<Text text="{disruptionModel>Nature}">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Text>
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label text="Help">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<Text text="{disruptionModel>Help}">
												<layoutData>
													<l:GridData span="L6 M6 S12" />
												</layoutData>
											</Text>
										</f:fields>
									</f:FormElement>

									<f:FormElement>
										<f:label>
											<Label text="Messages">
												<layoutData>
													<l:GridData span="L2 M2 S12"/>
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<VBox>
												<Text text="{disruptionModel>message}" />
												<layoutData>
													<l:GridData span="L10 M10 S12" />
												</layoutData>
											</VBox>
										</f:fields>
									</f:FormElement>

									<f:FormElement>
										<f:label>
											<Label text="Status">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<Text text="{disruptionModel>Status}">
												<layoutData>
													<l:GridData span="L10 M10 S12" />
												</layoutData>
											</Text>
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label>
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<TextArea value="Add Comments.." icon="sap-icon://sort"
												visible="{ parts: [ 'disruptionModel>commentVisible'], formatter : 'util.Formatter.showComment' }">
												<layoutData>
													<l:GridData span="L10 M10 S12" />
												</layoutData>
											</TextArea>
										</f:fields>
									</f:FormElement>
									<f:FormElement>
										<f:label>
											<Label text="">
												<layoutData>
													<l:GridData span="L8 M8 S12" linebreak="true" />
												</layoutData>
											</Label>
										</f:label>
										<f:fields>
											<Button text="Add Comment"
												visible="{ parts: [ 'disruptionModel>Status' ], formatter : 'util.Formatter.setVisibility' }"
												press="showCommentBox">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Button>
										</f:fields>
										<f:fields>
											<Button text="Mark Solved" type="Emphasized">
												<layoutData>
													<l:GridData span="L2 M2 S12" />
												</layoutData>
											</Button>
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
				</Panel>
			</CustomListItem>
		</List>
	</Panel>
</core:FragmentDefinition>