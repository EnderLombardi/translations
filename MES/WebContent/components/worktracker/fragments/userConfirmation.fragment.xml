<core:FragmentDefinition 
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form">
     <Dialog draggable="true"
        contentHeight="20%"
        contentWidth="50%"
		title="User Details Confirmation ">
		<content>
		<f:SimpleForm id="FieldGroupView" minWidth="1024"
				maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
				labelSpanL="1" labelSpanM="2"
				emptySpanL="0" emptySpanM="0" columnsL="1" columnsM="1"
				validateFieldGroup="onValidateFieldGroup">
				<f:content>
					<Label text="Username" />
					<Input fieldGroupIds="user" value="{userName}"
						id="username" placeholder="Enter username"
						class="sapUiSmallMarginBottom" type="Text"/>
					<Label text="Password" />
					<Input fieldGroupIds="user" type="Password" value="{password}"
						id="password" placeholder="Enter password">
					</Input>					     
			</f:content>
			</f:SimpleForm>
		</content>		
		<buttons>
		<Button id="submit" text="Submit" press="onAccept" type="Accept"/>
		<Button id="cancel" text="Cancel" press="onCancel" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>