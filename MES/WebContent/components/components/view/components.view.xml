<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:table="sap.ui.table"
    controllerName="airbus.mes.components.controller.components"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout" xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:cData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" >

    <Page enableScrolling="false" showHeader="false" height="100%">
    <content>

    <!-- <Text id="jigToollabel" class="jigToolListlabel" text="{i18nJigstoolsModel>JigTool}" /> -->

    <VBox id="ComponentsCheck" class="ComponentsCheck">
             <RadioButtonGroup columns="2" select="onSelectLevel">
                <buttons>
                    <RadioButton id="operationButton" text="{i18nComponentsModel>componentsOperation}"/>
                    <RadioButton id="workOrderButton" text="{i18nComponentsModel>componentsWorkOrder}"/>
                </buttons>
            </RadioButtonGroup>
    </VBox>
        <OverflowToolbar id="otbSubheader">
            <Button id="idFilterComponent"
                    text="{i18nComponentsModel>SelectFilter}"
                    type="Transparent" class="ClassProductionButton whiteColor whiteButton" press="onSelectFilter"/>
            <SearchField id="idSearchComponent" liveChange="onFilterComponent">
                <layoutData><OverflowToolbarLayoutData minWidth="200px" maxWidth="300px" shrinkable="true"/></layoutData>
            </SearchField>
        </OverflowToolbar>
        <table:Table id="ComponentsList" class="ComponentsList"
                     rows="{componentsWorkOrderDetail>/Rowsets/Rowset/0/Row/}"
                     editable="true"
                     width="100%">
        <table:columns>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>itemNumber}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>itemNumber}" />
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>operationNumber}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>operationNumber}"/>
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>materialType}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>materialType}"  />
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>materialDescription}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>materialDescription}"  />
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>storageLocation}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>storageLocation}"  />
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>freestockKanbanBulkMaterial}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>freestockKanbanBulkMaterial}"  />
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>requiredQty}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>requiredQty}"  />
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>withdrawQty}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>withdrawQty}"  />
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>shortage}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>shortage}"  />
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>unit}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>unit}"  />
                </table:template>
            </table:Column>
            <table:Column  width="12rem">
                <Label text="{i18nComponentsModel>serialNumber}" />
                <table:template>
                    <Text text="{componentsWorkOrderDetail>serialNumber}"  />
                </table:template>
            </table:Column>
            <table:Column id="editableRowCom"  width="12rem">
                <Label text="{i18nComponentsModel>committed}" />
                <table:template>
                   <HBox>
                       <Button icon="sap-icon://synchronize" type="Default" press="synchronizeFieldCommitted" />
                    <StepInput ValueState="None"
                               class="stepInputComponent"
                               value="{componentsWorkOrderDetail>committed}"
                               min="0"
                               max="{componentsWorkOrderDetail>withdrawQty}"
                               width="{width}"
                               step="{step}"
                               enabled="true"
                               editable="true"
                               change="committedLiveChange"/>
                   </HBox>
                </table:template>
            </table:Column>
            <table:Column id="editableRowFit" width="12rem">
                <Label text="{i18nComponentsModel>fitted}" />
                <table:template>
                    <HBox>
                        <Button icon="sap-icon://synchronize" type="Default" press="synchronizeFieldFitted" />
                        <StepInput ValueState="None"
                                   class="stepInputComponent"
                                   value="{componentsWorkOrderDetail>fitted}"
                                   min="0"
                                   max="{componentsWorkOrderDetail>withdrawQty}"
                                   width="{width}"
                                   step="{step}"
                                   enabled="true"
                                   editable="true"
                                   change="fittedLiveChange"/>
                    </HBox>
                </table:template>
            </table:Column>
        </table:columns>
        </table:Table>
        <HBox id="servicesButtonComponents">
            <Button id="btnComponentsSave" visible="true" enabled="false" text="{i18nComponentsModel>save}" icon="sap-icon://save" type="Emphasized" press="onbtnComponentsSave" />
            <Button id="btnComponentsFreeze" visible="true" enabled="false" text="{i18nComponentsModel>freeze}" icon="sap-icon://stop" type="Emphasized" press="onbtnComponentsFreeze" />
        </HBox>
    </content>

    </Page>
</mvc:View>

