<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" xmlns:table="sap.ui.table" controllerName="airbus.mes.components.controller.components">

	<Page enableScrolling="false" showHeader="false" class="sapUiSizeCozy">
		<content>


			<table:Table id="ComponentsList" class="ComponentsList"
				rows="{componentsWorkOrderDetail>/Rowsets/Rowset/0/Row/}" editable="true"
				width="100%" visibleRowCountMode="Auto">

				<table:extension>
					<VBox id="ComponentsCheck" class="ComponentsCheck">
						<RadioButtonGroup columns="2" select="onSelectLevel">
							<buttons>
								<RadioButton id="operationButton"
									text="{i18nComponentsModel>componentsOperation}" />
								<RadioButton id="workOrderButton"
									text="{i18nComponentsModel>componentsWorkOrder}" />
							</buttons>
						</RadioButtonGroup>
					</VBox>
					<OverflowToolbar id="otbSubheader">
						<Button id="idFilterComponent" text="{i18nComponentsModel>SelectFilter}"
							type="Transparent" class="ClassProductionButton whiteColor whiteButton"
							press="onSelectFilter" />
						<SearchField id="idSearchComponent" liveChange="onFilterComponent">
							<layoutData>
								<OverflowToolbarLayoutData minWidth="200px"
									maxWidth="300px" shrinkable="true" />
							</layoutData>
						</SearchField>
					</OverflowToolbar>
				</table:extension>
				<table:columns>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center" text="{i18nComponentsModel>itemNumber}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>itemNumber}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center" text="{i18nComponentsModel>operationNumber}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>operationNumber}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center" text="{i18nComponentsModel>materialType}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>materialType}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center" text="{i18nComponentsModel>materialDescription}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>materialDescription}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center" text="{i18nComponentsModel>storageLocation}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>storageLocation}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center"
							text="{i18nComponentsModel>freestockKanbanBulkMaterial}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>FKBm}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center" text="{i18nComponentsModel>requiredQty}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>reqQty}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center" text="{i18nComponentsModel>withdrawQty}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>withdrawQty}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center" text="{i18nComponentsModel>shortage}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>shortage}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto">
						<Label textAlign="Center" text="{i18nComponentsModel>unit}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>unit}" />
						</table:template>
					</table:Column>
					<table:Column autoResizable="true" width="auto"
						visible="{Profile>/identifiedUser/permissions/FITTED_COMPONENTS}">
						<Label textAlign="Center" text="{i18nComponentsModel>serialNumber}" />
						<table:template>
							<Text text="{componentsWorkOrderDetail>serialNumber}" />
						</table:template>
					</table:Column>
					<table:Column id="editableRowCom" autoResizable="true"
						width="auto" visible="{Profile>/identifiedUser/permissions/FITTED_COMPONENTS}">
						<Label textAlign="Center" text="{i18nComponentsModel>committed}" />
						<table:template>
							<HBox>
								<Button icon="sap-icon://synchronize" type="Default"
									press="synchronizeFieldCommitted" />
								<Input type="Number" class="stepInputComponent"
									value="{componentsWorkOrderDetail>committed}" width="{width}"
									enabled="{Profile>/identifiedUser/permissions/FITTED_COMPONENTS}"
									editable="true" change="committedLiveChange" />
							</HBox>
						</table:template>
					</table:Column>
					<table:Column id="editableRowFit" autoResizable="true"
						width="auto" visible="{Profile>/identifiedUser/permissions/FITTED_COMPONENTS}">
						<Label textAlign="Center" text="{i18nComponentsModel>fitted}" />
						<table:template>
							<HBox>
								<Button icon="sap-icon://synchronize" type="Default"
									press="synchronizeFieldFitted" />
								<Input type="Number" class="stepInputComponent"
									value="{componentsWorkOrderDetail>fitted}" width="{width}"
									enabled="{Profile>/identifiedUser/permissions/FITTED_COMPONENTS}"
									editable="true" change="fittedLiveChange" />
							</HBox>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
			<!--<HBox id="servicesButtonComponents">
				<Button id="btnComponentsSave"
					visible="{Profile>/identifiedUser/permissions/FITTED_COMPONENTS}"
					enabled="false" text="{i18nComponentsModel>save}" icon="sap-icon://save"
					type="Emphasized" press="onbtnComponentsSave" />
				<Button id="btnComponentsFreeze"
					visible="{Profile>/identifiedUser/permissions/FITTED_COMPONENTS}"
					enabled="false" text="{i18nComponentsModel>freeze}" icon="sap-icon://stop"
					type="Emphasized" press="onbtnComponentsFreeze" />
			</HBox>-->
		</content>

	</Page>
</mvc:View>

