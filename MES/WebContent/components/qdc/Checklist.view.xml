<core:View 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:tab="sap.ui.table"
	controllerName="airbus.mes.qdc.Checklist" >

	
	
	<Page id="idChecklistPage" showHeader="false" height="100%" enableScrolling="false">
		<content>
		
		<VBox id="TabChecklist" class="TabChecklist">
			<tab:TreeTable rows="{QDCModel>/root}" id="TabChecklistTable" class="TabChecklistTable" expandFirstLevel="true">
				<!-- <tab:toolbar>
					<Toolbar>
						<Title text="{i18n>CheckListAndRecords}" />
					</Toolbar>
				</tab:toolbar> -->
				<tab:columns>
					<tab:Column>
						<Label class="TabChecklistLabel" text="{i18n>PointofAttention}" />
						<tab:template>
						<HBox >
							<HBox justifyContent="Begin" width="100%">
							<Text text="{QDCModel>name}" class="AllignItem" />
							<Label text="" class="adjustWidth"/>
							</HBox>
							<HBox justifyContent="End" >
							<core:Icon color="orange" src="{path:'QDCModel>checked', formatter:'airbus.mes.qdc.util.Formatter.getExclamationIcon'}"></core:Icon>					
							</HBox>
							</HBox>
						</tab:template>
					</tab:Column>
					<tab:Column>
						<Label class="TabChecklistLabel" text="{i18n>record}" />
						<tab:template>
							<Label text="{QDCModel>description}" class="AllignItem" />
						</tab:template>
					</tab:Column>
				</tab:columns>
			</tab:TreeTable>
			<HBox >
				<HBox justifyContent="Begin" width="100%">
				<Button text="{i18n>MEA}" width="100%" class="ConfirmChecklist sapUiMediumMarginEnd" enabled="false"></Button>
				<Button text="{i18n>MAA}" width="100%" class="ConfirmChecklist sapUiMediumMarginEnd" enabled="false"></Button>
				<Button text="{i18n>QDC}" width="100%" class="ConfirmChecklist sapUiMediumMarginEnd" enabled="false"></Button>
				</HBox>
				<HBox justifyContent="End" >
				<Button text="Confirm" class="ConfirmChecklist"></Button>
				</HBox>
			</HBox>
			
			
		</VBox>

		</content>
	</Page>
</core:View>