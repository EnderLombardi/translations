<core:View 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core"
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:tab="sap.ui.table"
	controllerName="airbus.mes.qdc.Checklist" >

	
	
	<Page showHeader="false" height="100%" enableScrolling="true">
		<content>
		
		<VBox id="TabChecklist" class="TabChecklist">
			<tab:TreeTable rows="{QDCModel>/root}" id="TabChecklistTable" class="TabChecklistTable" expandFirstLevel="true">
				<!-- <tab:toolbar>
					<Toolbar>
						<Title text="{i18n>CheckListAndRecords}" />
					</Toolbar>
				</tab:toolbar> -->
				<tab:columns>
					<tab:Column>
						<Label class="TabChecklistLabel" text="{i18n>PointofAttention}" />
						<tab:template>
							<HBox>
							<Text text="{QDCModel>name}" class="AllignItem" />
							<core:Icon src="{path:'QDCModel>checked', formatter:'airbus.mes.qdc.util.Formatter.getExclamationIcon'}"></core:Icon>
							</HBox>
						</tab:template>
					</tab:Column>
					<tab:Column>
						<Label class="TabChecklistLabel" text="{i18n>record}" />
						<tab:template>
							<Label text="{QDCModel>description}" class="AllignItem" />
						</tab:template>
					</tab:Column>
				</tab:columns>
			</tab:TreeTable>
			<HBox justifyContent="End" >
				<Button text="Confirm" class="ConfirmChecklist"></Button>
			</HBox>
			
		</VBox>

		</content>
	</Page>
</core:View>