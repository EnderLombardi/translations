<core:FragmentDefinition xmlns="sap.ui.table" xmlns:m="sap.m" xmlns:core="sap.ui.core">

    <Dialog id="missingPartsPopUp" class="ClassMissingPartsPopUpPopUp theme-disabled" contentWidth="90%"
        contentHeight="90%" verticalScrolling="false" showHeader="false" afterClose="afterCloseMissingPartsPopup">
        <content>
		<Table
                    id="MPTable"
                    class="MPTable"
                    rows="{getMissingParts>/Rowsets/Rowset/0/Row}"
                    ariaLabelledBy="title"
                    selectionMode="None"
                    firstVisibleRowChanged="onScroll"
                    visibleRowCount="9">
                <columns>
                    <Column width="10%">
                        <Label class="MPTLabel" text="{i18nmissingPartsModel>WorkOrder}"/>
                        <template>
                            <Text text="{getMissingParts>WorkOrder}"/>
                        </template>
                    </Column>
                    <Column width="10%">
                        <Label class="MPTLabel" text="{i18nmissingPartsModel>Operation}"/>
                        <template>
                            <Text text="{getMissingParts>Operation}"/>
                        </template>
                    </Column>
                    <Column width="10%">
                        <Label class="MPTLabel" text="{i18nmissingPartsModel>PartNumber}"/>
                        <template>
                            <Text text="{getMissingParts>PartNumber}"/>
                        </template>
                    </Column>
                    <Column width="10%">
                        <Label class="MPTLabel" text="{i18nmissingPartsModel>PartDescript}"/>
                        <template>
                            <Text text="{getMissingParts>PartDescript}"/>
                        </template>
                    </Column>
                    <Column width="10%">
                        <Label class="MPTLabel" text="{i18nmissingPartsModel>Quantity}"/>
                        <template>
                            <Text text="{getMissingParts>Quantity}"/>
                        </template>
                    </Column>
                    <Column width="10%">
                        <Label class="MPTLabel" text="{i18nmissingPartsModel>CriticalPart}"/>
                        <template>
                            <Text text="{getMissingParts>CriticalPart}"/>
                        </template>
                    </Column>
                    <Column width="10%">
                        <Label class="MPTLabel" text="{i18nmissingPartsModel>ExpectStDate}"/>
                        <template>
                            <Text text="{getMissingParts>ExpectStDate}"/>
                        </template>
                    </Column>                 
                </columns>
            </Table>
        </content>

        <buttons>
            <Button text="{StationTrackerI18n>Close}"  icon="sap-icon://decline" press="onCloseMPPopup" />
        </buttons>
    </Dialog>

</core:FragmentDefinition>
