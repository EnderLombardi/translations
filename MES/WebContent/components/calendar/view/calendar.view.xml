<core:View xmlns:core="sap.ui.core" xmlns="sap.m"
	xmlns:suite="sap.suite.ui.commons" controllerName="airbus.mes.calendar.controller.calendar"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:custom="airbus.mes.calendar.util"
	xmlns:layout="sap.ui.layout" xmlns:micro="sap.suite.ui.microchart"
	xmlns:uni="sap.ui.unified">

	<Page title="Station Tracker" height="100%" showHeader="false"
		enableScrolling="false " class="GenricBgColor">

		<Toolbar id="kpiHeaderToolbar" class="classKpiheaderToolbar pageHeader kpiPageHeader contentNoPad">
			<Label id="teamAvaibility" text="{calendarI18n>teamavaibility}" class="classDateLabel" />
			
			<Button id="calendardateButton" icon="sap-icon://appointment"
				type="Transparent" tooltip="{calendarI18n>Calendar}" press="datePick"/>
			<Label id="dateLabel" text="" class="classDateLabel" />
		
		</Toolbar>

		<content width="100%" height="100%">
			<OverflowToolbar id="toolbarcalendar" class="Subheader"
				width="100%">
				<content>
					<Button id="navBack" icon="sap-icon://arrow-left" press="onBackPress" type="Transparent"/>
					<SegmentedButton id="buttonViewMode">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow" />
						</layoutData>
						
						<items>
							<SegmentedButtonItem text="{calendarI18n>ButtonShift}"	press="onShiftPress" key="shift" />
							<SegmentedButtonItem text="{calendarI18n>ButtonDay}"	press="onDayPress" key="day" />
							<SegmentedButtonItem text="{calendarI18n>ButtonTAKT}"	press="" key="takt" />
						</items>
					</SegmentedButton>
			

					<Label text="{calendarI18n>teamavaibility}" class="classDateLabel" />

				<core:Icon id="calendarAbsence" src="sap-icon://color-fill"/>
				<Label id="calendarAbsenceLabel" text="{calendarI18n>calendarAbsence}" class="initialFont" />
				
				<core:Icon id="calendarDiversion" src="sap-icon://color-fill"/>
				<Label id="calendarDiversionLabel" text="{calendarI18n>calendarDiversion}" class="initialFont" />
				
				<core:Icon id="calendarLoaned" src="sap-icon://color-fill" />
				<Label id="calendarLoanedLabel" text="{calendarI18n>calendarLoaned}" class="initialFont" />

						

					<ToolbarSpacer />

					<Select id="calendarRessource" class="sapUiTinyMarginBeginEnd comboBoxStyle"
						items="{ressourcePoolModel>/Rowsets/Rowset/0/Row}" change="filterByRessourcePool">
						<core:ListItem key="{ressourcePoolModel>RESSOURCE_ID}"
							text="{ressourcePoolModel>RESSOURCE_DESC}" />
					</Select>

					<Button id="calendarCapacity" type="Transparent" enabled="true"
						icon="sap-icon://hide" text="{calendarI18n>showCapacity}" press="hideKPI" />

				</content>
			</OverflowToolbar>

			<custom:DHTMLXScheduler id="calendar"></custom:DHTMLXScheduler>




			<Text text="{testModel>/Rowsets/Rowset/0/Row/0/avlLine}"></Text>

		</content>
	</Page>
</core:View>