<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="airbus.mes.settings.FilterPlantData" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page class="GenricBgColor" title="MES" enableScrolling="true" showHeader="false">
		<content>
		
		<FlexBox height="100%" width="100%" alignItems="Center"
				justifyContent="Center">
				<items>
					<VBox id="settingsScreenBox" width="60%">
						<items >
						<Toolbar class="titleToolbar">
						<content>
							<Text class="textSize" text="Welcome to Airbus MES" />
							<ToolbarSpacer />
							<!-- <Button type="Transparent" text="English" icon="sap-icon://slim-arrow-down" 
								iconFirst="false" /> -->
						</content>
					</Toolbar>
						<Toolbar class="subHeader">
						<content>
							<Text class="subHeaderText" text="Station Tracker" />
						</content>
					</Toolbar>
					<Panel backgroundDesign="Transparent" class="PanelbgImg2">
				<content>
					<f:Form id="Form1" minWidth="1024" maxContainerCols="3"
						editable="true">

						<f:layout>
							<f:ResponsiveGridLayout labelSpanL="2"
								labelSpanM="2" emptySpanL="4" emptySpanM="4" labelSpanS="2"
								emptySpanS="4" columnsL="1" columnsM="1" />
						</f:layout>


						<f:formContainers>
							<f:FormContainer>
								<f:formElements>
									<f:FormElement label="{i18n>Plant}">
										<f:fields>
											<ComboBox id="ComboBoxPlant" items="{siteModel>/Rowsets/Rowset/0/Row}"
												selectionChange="loadPlantModel">
												<items>
													<core:Item key="{siteModel>site}" text="{siteModel>site}">
													</core:Item>

												</items>
											</ComboBox>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>Program}">
										<f:fields>
											<ComboBox id="ComboBoxProgram" items="{plantModel>/Rowsets/Rowset/0/Row}"
												change="onSelectionChange">
												<items>
													<core:Item key="{plantModel>program}" text="{plantModel>program}">
													</core:Item>

												</items>
											</ComboBox>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>Line}">
										<f:fields>
											<ComboBox id="ComboBoxLine" items="{plantModel>/Rowsets/Rowset/0/Row}"
												selectionChange="onSelectionChange">
												<items>
													<core:Item key="{plantModel>line}" text="{plantModel>line}">
													</core:Item>

												</items>
											</ComboBox>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>Station}">
										<f:fields>
											<ComboBox id="ComboBoxStation" selectionChange="onSelectionChange"
												items="{plantModel>/Rowsets/Rowset/0/Row}">
												<items>
													<core:Item key="{plantModel>station}" text="{plantModel>station}">
													</core:Item>

												</items>
											</ComboBox>
										</f:fields>
									</f:FormElement>
									<f:FormElement label="{i18n>Optional}">
										<f:fields>
										</f:fields>


									</f:FormElement>
									<f:FormElement label="{i18n>MSN}">
										<f:fields>
											<ComboBox id="ComboBoxMSN" items="{plantModel>/Rowsets/Rowset/0/Row}">
												<items>
													<core:Item key="{plantModel>msn}" text="{plantModel>msn}">
													</core:Item>

												</items>
											</ComboBox>
										</f:fields>
									</f:FormElement>
								</f:formElements>
							</f:FormContainer>
						</f:formContainers>
					</f:Form>
				</content>
			</Panel>
			<Toolbar class="footerToolbar">
				<ToolbarSpacer />
				<Button class="buttonLoad" id="btn1" type="Transparent"
					text="Load Station Tracker" icon="sap-icon://slim-arrow-right"
					iconFirst="false" press="loadStationTracker" />
			</Toolbar>
						</items>
					</VBox>
				</items>
			</FlexBox>
			
			


		</content>
	</Page>
</core:View>
