<core:View controllerName="airbus.mes.settings.Settings"
	xmlns="sap.m" xmlns:vbm="sap.ui.vbm" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Page>
		<customHeader>
			<Bar>
				<contentMiddle>
					<Title text="{i18n>Title}" />
				</contentMiddle>
			</Bar>
		</customHeader>
		<subHeader>
			<Bar>
				<contentLeft>
					<Button id="navBack" type="Transparent" text="{i18n>Back}" press="onPress"
						icon="sap-icon://arrow-left" height="100%" />
				</contentLeft>
				<contentRight>
					<Button  id="navConfirm" type="Transparent" text="{i18n>Confirm}"
						press="saveUserSettings" iconFirst="false" icon="sap-icon://arrow-right"
						height="100%" />
				</contentRight>
			</Bar>
		</subHeader>
		<l:Splitter width="100%" height="100%">
		<List headerText="{i18n>Program}" items="{path: 'program>/ProgramCollection'}"
				width="95%" class="sapUiTinyMargin" id="headTextProgram">
				<CustomListItem icon="{program>picture}">
					<HBox>
						<RadioButton enabled="{ path : 'program>prog', formatter : 'airbus.mes.settings.util.Formatter.enabledProgram' }"
						select="onProgramSelect"	text="{program>prog}" />
						<Image src="{program>picture}" width="50%" />
					</HBox>
				</CustomListItem>
				<layoutData>
					<l:SplitterLayoutData size="25%" resizable="true" />
				</layoutData>
			</List>
			<VBox>
		<Bar class="sapMListHdr">
		<contentLeft>
			<Label text="test"></Label>
		</contentLeft>
		</Bar>
			<SelectList headerText="{i18n>Site}" items="{path: 'site>/SiteCollection'}"
				width="95%" class="sapUiTinyMargin" id="headTextPlant" itemPress="onPressSite" >
				<core:Item text="{site>Site}" key="{site>Site}" enabled="{ path : 'site>Site', formatter : 'airbus.mes.settings.util.Formatter.enabledSite' }" />
				<layoutData>
					<l:SplitterLayoutData size="20%" resizable="true" />
				</layoutData>
			</SelectList>
			</VBox>
			<!-- <List headerText="Program" items="{path: 'plantModel>/Rowsets/Rowset/0/Row'}"
				width="95%" class=" selectProgram sapUiTinyMargin">
				<CustomListItem>
					<HBox>
						<Text text="{plantModel>program}" />
						<Image src="{program>picture}" press="onImagePress" width="70%" />
					</HBox>
				</CustomListItem>
				<layoutData>
					<l:SplitterLayoutData size="20%" resizable="true" />
				</layoutData>
			</List>
			<List headerText="Plant" items="{path: 'siteModel>/Rowsets/Rowset/0/Row'}"
				width="95%" class="selectSite sapUiTinyMargin">
				<StandardListItem title="{siteModel>site}" type="Navigation"
					press="onPressSite" />
				<layoutData>
					<l:SplitterLayoutData size="25%" resizable="true" />
				</layoutData>
			</List> -->
			<vbm:AnalyticMap id="vbi" width="100%" height="100%"
				regions="{region>/Regions}" regionClick="onRegionClick">
				<vbm:regions>
					<vbm:Region code="{region>code}" color="{region>color}"
						tooltip="{region>country}" />
				</vbm:regions>
				<vbm:Spots items="{region>/Spots}" click="onClickItem"
					contextMenu="onContextMenuItem">
					<vbm:Spot position="{region>pos}" tooltip="{region>tooltip}"
						type="{region>type}" text="{region>text}" click="onClickSpot"
						contextMenu="onContextMenuSpot" />
				</vbm:Spots>
			</vbm:AnalyticMap>

			<VBox class="sapUiTinyMargin">
				<f:SimpleForm id="headTextForm" minWidth="1024"
					visible="true" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout"
					labelSpanL="3" labelSpanM="3" emptySpanL="4" emptySpanM="4"
					columnsL="1" columnsM="1" class="editableForm" title="{i18n>OtherSettings}">
					<f:content>
						<Label id="lblLine" text="{i18n>Line}" design="Bold" />
						<ComboBox id="selectLine" items="{plantModel>/Rowsets/Rowset/0/Row}"
							visible="true" change="onSelectionChange">
							<items>
								<core:Item key="{plantModel>line}" text="{plantModel>line}" />
							</items>
						</ComboBox>
						<Label id="lblStation" text="{i18n>Station}" design="Bold" />
						<ComboBox id="selectStation"
							items="{plantModel>/Rowsets/Rowset/0/Row}"
							visible="true" change="onSelectionChange">
							<items>
								<core:Item key="{plantModel>station}" text="{plantModel>station}" />
							</items>
						</ComboBox>
						<Label id="lblMSN" text="{i18n>MSN}" design="Bold" />
						<ComboBox id="selectMSN" items="{plantModel>/Rowsets/Rowset/0/Row}"
							visible="true" change="onSelectionChange" enabled="false">
							<items>
								<core:Item key="{plantModel>msn}" text="{plantModel>msn}" />
							</items>
						</ComboBox>
						<CheckBox id="currMSN"  selected="true"  text="{i18n>CurrentMSN}" style="font-weight: bold;" select="selectCurrentMsn" />
					</f:content>
				</f:SimpleForm>
				<layoutData>
					<l:SplitterLayoutData size="30%" resizable="true" />
				</layoutData>
			</VBox>

		</l:Splitter>

	</Page>


</core:View>